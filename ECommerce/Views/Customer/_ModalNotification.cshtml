<div id="notificationModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-0">
    <div class="modal-panel bg-white rounded-2xl shadow-2xl max-w-sm w-full mx-4 overflow-hidden transform transition-all duration-200 opacity-0 scale-95">
        <!-- Header -->
        <div id="modalHeader" class="h-2 bg-gradient-to-r from-blue-500 to-blue-600"></div>
        
        <!-- Content -->
        <div class="p-8">
            <!-- Icon -->
            <div class="flex justify-center mb-4">
                <div id="modalIcon" class="w-16 h-16 rounded-full flex items-center justify-center text-3xl">
                    <i class="ph ph-check-circle"></i>
                </div>
            </div>

            <!-- Title -->
            <h3 id="modalTitle" class="text-2xl font-bold text-gray-800 text-center mb-3">
                Success
            </h3>

            <!-- Message -->
            <p id="modalMessage" class="text-gray-600 text-center leading-relaxed mb-8">
                Your message here
            </p>

            <button type="button" id="modalCloseBtn" class="w-full py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-200">
                Accept
            </button>
        </div>
    </div>
</div>

<script>
    (function () {
        function applyShowAnimation(modal, panel) {
            panel.classList.remove('opacity-100', 'scale-100');
            panel.classList.add('opacity-0', 'scale-95');

            void panel.offsetWidth;

            panel.classList.remove('opacity-0', 'scale-95');
            panel.classList.add('opacity-100', 'scale-100');

            modal.classList.remove('bg-opacity-0');
            modal.classList.add('bg-opacity-50');
        }

        function applyHideAnimation(modal, panel, onHidden) {
            panel.classList.remove('opacity-100', 'scale-100');
            panel.classList.add('opacity-0', 'scale-95');

            modal.classList.remove('bg-opacity-50');
            modal.classList.add('bg-opacity-0');

            setTimeout(function () {
                if (typeof onHidden === 'function') onHidden();
            }, 220);
        }

        window.notificationModal = {
            success: function(title, message, callback) {
                this.show(title, message, 'success', callback);
            },
            error: function(title, message, callback) {
                this.show(title, message, 'error', callback);
            },
            warning: function(title, message, callback) {
                this.show(title, message, 'warning', callback);
            },
            info: function(title, message, callback) {
                this.show(title, message, 'info', callback);
            },
            show: function(title, message, type = 'info', callback = null) {
                const modal = document.getElementById('notificationModal');
                const panel = modal.querySelector('.modal-panel');
                const modalTitle = document.getElementById('modalTitle');
                const modalMessage = document.getElementById('modalMessage');
                const modalIcon = document.getElementById('modalIcon');
                const modalHeader = document.getElementById('modalHeader');
                const closeBtn = document.getElementById('modalCloseBtn');

                modalTitle.textContent = title;
                modalMessage.textContent = message;

                const configs = {
                    success: {
                        header: 'bg-gradient-to-r from-green-500 to-green-600',
                        icon: 'bg-green-100 text-green-600',
                        button: 'bg-green-600 hover:bg-green-700',
                        iconClass: 'ph-check-circle'
                    },
                    error: {
                        header: 'bg-gradient-to-r from-red-500 to-red-600',
                        icon: 'bg-red-100 text-red-600',
                        button: 'bg-red-600 hover:bg-red-700',
                        iconClass: 'ph-warning-circle'
                    },
                    warning: {
                        header: 'bg-gradient-to-r from-yellow-500 to-yellow-600',
                        icon: 'bg-yellow-100 text-yellow-600',
                        button: 'bg-yellow-600 hover:bg-yellow-700',
                        iconClass: 'ph-warning'
                    },
                    info: {
                        header: 'bg-gradient-to-r from-blue-500 to-blue-600',
                        icon: 'bg-blue-100 text-blue-600',
                        button: 'bg-blue-600 hover:bg-blue-700',
                        iconClass: 'ph-info'
                    }
                };

                const config = configs[type] || configs.info;

                modalHeader.className = `h-2 ${config.header}`;
                modalIcon.className = `w-16 h-16 rounded-full flex items-center justify-center text-3xl ${config.icon}`;
                modalIcon.innerHTML = `<i class="ph ${config.iconClass}"></i>`;
                const newBtnClass = `w-full py-3 ${config.button} text-white font-semibold rounded-lg transition duration-200`;
                document.getElementById('modalCloseBtn').className = newBtnClass;

                modal.classList.remove('hidden');
                modal.style.display = 'flex';

                applyShowAnimation(modal, panel);

                const clone = closeBtn.cloneNode(true);
                closeBtn.parentNode.replaceChild(clone, closeBtn);

                clone.addEventListener('click', () => {
                    this.hide();
                    if (callback && typeof callback === 'function') callback();
                });

                modal.addEventListener('click', function outsideHandler(e) {
                    if (e.target === modal) {
                        modal.removeEventListener('click', outsideHandler);
                        window.notificationModal.hide();
                        if (callback && typeof callback === 'function') callback();
                    }
                });
            },
            hide: function() {
                const modal = document.getElementById('notificationModal');
                if (!modal) return;
                const panel = modal.querySelector('.modal-panel');
                applyHideAnimation(modal, panel, function () {
                    modal.style.display = 'none';
                    modal.classList.add('hidden');
                });
            }
        };
    })();
</script>