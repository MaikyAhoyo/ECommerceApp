@model ECommerce.ViewModels.CustomerProductDetailsViewModel
@{
    ViewData["Title"] = Model.Product.Name;
    Layout = "_CustomerLayout";
}

<section class="bg-gradient-to-br from-primary via-primary/95 to-primary/90 py-16">
    <nav aria-label="breadcrumb" class="mb-6 flex justify-center">
        <ol class="flex items-center space-x-2 text-sm text-white/60">
            <li><a asp-controller="Customer" asp-action="Home" class="hover:text-gold transition-colors">Home</a></li>
            <li><i class="ph ph-caret-right text-xs"></i></li>
            <li><a asp-controller="Customer" asp-action="Products" class="hover:text-gold transition-colors">Products</a></li>
            <li><i class="ph ph-caret-right text-xs"></i></li>
            <li class="text-white font-medium truncate max-w-[200px]">@Model.Product.Name</li>
        </ol>
    </nav>

    <div class="container mx-auto px-4 text-center text-white">
        <h1 class="font-playfair text-4xl md:text-5xl font-bold mb-4">
            @Model.Product.Name
        </h1>
        <p class="text-xl text-white/90">@Model.Product.Metal Collection</p>
    </div>
</section>

<div class="bg-cream py-12 pb-24">
    <div class="container mx-auto px-4">

        <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100 mb-16">
            <div class="grid lg:grid-cols-2 gap-0">

                <div class="bg-gray-50 p-8 lg:p-12 flex items-center justify-center relative group">
                    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-white to-transparent opacity-50"></div>

                    <div class="relative z-10 w-full h-[400px] lg:h-[500px] flex items-center justify-center transition-transform duration-500 group-hover:scale-105">
                        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                        {
                            <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" id="mainImage" class="max-w-full max-h-full object-contain drop-shadow-2xl">
                        }
                        else
                        {
                            <div class="text-gray-300 text-8xl">
                                <i class="ph ph-image"></i>
                            </div>
                        }
                    </div>

                    <div class="absolute top-6 left-6 flex flex-col gap-2">
                        @if (Model.Product.Stock == 0)
                        {
                            <span class="bg-red-500 text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-lg">
                                Out of Stock
                            </span>
                        }
                        else if (Model.Product.Stock < 5)
                        {
                            <span class="bg-yellow-400 text-primary px-4 py-1.5 rounded-full text-sm font-bold shadow-lg">
                                Last Pieces!
                            </span>
                        }
                    </div>
                </div>

                <div class="p-8 lg:p-12 flex flex-col justify-center">

                    <div class="flex justify-between items-start mb-4">
                        <span class="text-sm uppercase tracking-wider text-gold font-bold">
                            @Model.Product.Metal &bull; @Model.Product.Purity
                        </span>

                        <div class="flex items-center gap-2 bg-cream px-3 py-1 rounded-full">
                            <div class="flex text-gold text-sm">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Floor(Model.AverageRating))
                                    {
                                        <i class="ph-fill ph-star"></i>
                                    }
                                    else if (i == Math.Ceiling(Model.AverageRating) && Model.AverageRating % 1 != 0)
                                    {

                                        <i class="ph-fill ph-star-half"></i>
                                    }
                                    else
                                    {

                                        <i class="ph ph-star text-gray-300"></i>
                                    }
                                }
                            </div>
                            <span class="text-xs font-semibold text-primary">@Model.AverageRating.ToString("0.0")</span>
                            <span class="text-xs text-gray-500">(@Model.ReviewCount)</span>
                        </div>
                    </div>

                    <h2 class="font-playfair text-4xl font-bold text-primary mb-6">@Model.Product.Name</h2>

                    <div class="flex items-end gap-4 mb-8 pb-8 border-b border-gray-100">
                        <span class="text-5xl font-bold text-gold">$@Model.Product.Price.ToString("N0")</span>
                        @if (Model.Product.OriginalPrice > Model.Product.Price)
                        {
                            <span class="text-xl text-gray-400 line-through mb-2">$@Model.Product.OriginalPrice.ToString("N0")</span>
                        }
                    </div>

                    <div class="prose prose-sm text-gray-600 mb-8">
                        <p>@Model.Product.Description</p>
                    </div>

                    <div class="grid grid-cols-3 gap-4 mb-8">
                        <div class="bg-cream rounded-xl p-4 flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-gold shadow-sm">
                                <i class="ph-fill ph-sketch-logo text-xl"></i>
                            </div>
                            <div>
                                <span class="block text-xs text-gray-500 uppercase">Material</span>
                                <span class="font-semibold text-primary">@Model.Product.Metal</span>
                            </div>
                        </div>
                        <div class="bg-cream rounded-xl p-4 flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-gold shadow-sm">
                                <i class="ph-fill ph-certificate text-xl"></i>
                            </div>
                            <div>
                                <span class="block text-xs text-gray-500 uppercase">Purity</span>
                                <span class="font-semibold text-primary">@Model.Product.Purity</span>
                            </div>
                        </div>
                        <div class="bg-cream rounded-xl p-4 flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-gold shadow-sm">
                                <i class="ph-fill ph-package text-xl"></i>
                            </div>
                            <div>
                                <span class="block text-xs text-gray-500 uppercase">Stock</span>
                                <span class="font-semibold text-primary">@Model.Product.Stock</span>
                            </div>
                        </div>
                    </div>

                    @if (Model.Categories.Any())
                    {
                        <div class="flex flex-wrap gap-2 mb-8">
                            @foreach (var category in Model.Categories)
                            {
                                <a asp-controller="Customer" 
                                   asp-action="Products" 
                                   asp-route-categoryId="@category.Id"
                                   class="px-3 py-1 rounded-lg border border-gray-200 text-sm text-gray-600 hover:border-gold hover:text-gold transition-colors">
                                    #@category.Name
                                </a>
                            }
                        </div>
                    }

                    @if (Model.Product.Stock > 0)
                    {
                        <div class="flex flex-col sm:flex-row gap-4 mt-auto">
                            <div class="flex items-center bg-gray-50 rounded-full px-2 border border-gray-200 sm:w-auto w-full justify-between">
                                <button type="button" class="w-10 h-10 flex items-center justify-center text-gray-500 hover:text-primary transition" onclick="decreaseQty()">
                                    <i class="ph ph-minus font-bold"></i>
                                </button>
                                <input type="number" id="quantity" value="1" min="1" max="@Model.Product.Stock" class="w-12 text-center bg-transparent border-none font-bold text-primary focus:ring-0 p-0" readonly>
                                <button type="button" class="w-10 h-10 flex items-center justify-center text-gray-500 hover:text-primary transition" onclick="increaseQty()">
                                    <i class="ph ph-plus font-bold"></i>
                                </button>
                            </div>

                            <button type="button" onclick="addToCart(@Model.Product.Id)"
                                    class="flex-1 bg-primary hover:bg-primary/90 text-white h-14 rounded-full font-semibold shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-2 group">
                                <span>Add to Cart</span>
                                <i class="ph-bold ph-shopping-cart text-xl group-hover:text-gold transition-colors"></i>
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="bg-red-50 border border-red-100 text-red-600 px-6 py-4 rounded-2xl flex items-center gap-3">
                            <i class="ph-fill ph-bell-slash text-2xl"></i>
                            <div>
                                <span class="font-bold block">Out of Stock</span>
                                <span class="text-sm">We will notify you when it becomes available.</span>
                            </div>
                        </div>
                    }

                    <div class="flex items-center justify-between mt-8 pt-6 border-t border-gray-100 text-xs text-gray-500">
                        <div class="flex items-center gap-1"><i class="ph-fill ph-shield-check text-green-500 text-lg"></i> Secure Purchase</div>
                        <div class="flex items-center gap-1"><i class="ph-fill ph-truck text-gold text-lg"></i> Free Shipping</div>
                        <div class="flex items-center gap-1"><i class="ph-fill ph-arrow-counter-clockwise text-blue-500 text-lg"></i> 30-Day Returns</div>
                    </div>

                </div>
            </div>
        </div>

        <div class="grid gap-8">

            <div class="w-full">
                <div class="flex items-center justify-between mb-8">
                    <h3 class="font-playfair text-3xl font-bold text-primary">Reviews</h3>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <button type="button" onclick="openReviewModal()" class="text-gold font-semibold hover:underline flex items-center gap-2">
                            <i class="ph ph-pencil-simple"></i> Write a Review
                        </button>
                    }
                </div>

                @if (Model.Reviews.Any())
                {
                    <div class="space-y-4">
                        @foreach (var review in Model.Reviews.Take(5))
                        {
                            <div class="bg-white border border-gray-100 rounded-3xl shadow-sm hover:shadow-lg transition-all duration-300 p-8 group h-full flex flex-col">
                                <div class="flex justify-between items-start mb-6">
                                    <div>
                                        <div class="flex items-center gap-3 mb-2">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 rounded-full bg-gold/20 text-gold flex items-center justify-center font-bold text-sm">
                                                    @review.User?.Name.Substring(0, 1).ToUpper()
                                                </div>
                                                <h6 class="font-bold text-primary text-sm">@review.User?.Name</h6>
                                            </div>
                                            <span class="inline-flex items-center gap-1 px-3 py-1 bg-cream text-gold text-xs font-bold rounded-full border border-gold/10">
                                                @review.Rating
                                                <i class="ph-fill ph-star"></i>
                                            </span>
                                        </div>
                                        <p class="text-xs uppercase tracking-wider text-gray-400 font-bold flex items-center gap-2">
                                            <i class="ph-bold ph-calendar-blank"></i>
                                            @review.CreatedAt.ToString("MMMM dd, yyyy")
                                        </p>
                                    </div>
                                </div>

                                <div class="flex items-center gap-4 mb-6">
                                    <div class="flex text-gold text-lg">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="ph-fill ph-star"></i>
                                            }
                                            else
                                            {
                                                <i class="ph ph-star text-gray-200"></i>
                                            }
                                        }
                                    </div>
                                    <span class="text-xs font-bold text-primary bg-gray-100 px-3 py-1 rounded-lg">
                                        @switch (review.Rating)
                                        {
                                            case 5:
                                                <span>Excellent</span>
                                                ; break;
                                            case 4:

                                                <span>Good</span>
                                                ; break;
                                            case 3:

                                                <span>Average</span>
                                                ; break;
                                            case 2:

                                                <span>Poor</span>
                                                ; break;
                                            case 1:

                                                <span>Very Poor</span>
                                                ; break;
                                            default:

                                                <span>Rated</span>
                                                ; break;
                                        }
                                    </span>
                                </div>

                                <div class="bg-gray-50 rounded-2xl p-6 relative mb-6 flex-grow">
                                    <i class="ph-fill ph-quotes text-gray-200 text-3xl absolute -top-3 -left-2 bg-white rounded-full p-1"></i>
                                    <p class="text-gray-600 leading-relaxed italic relative z-10">"@review.Comment"</p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="bg-white rounded-2xl p-10 text-center border border-dashed border-gray-200">
                        <div class="w-16 h-16 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-4 text-gray-300">
                            <i class="ph-fill ph-chat-teardrop-text text-3xl"></i>
                        </div>
                        <p class="text-gray-500 mb-4">There are no reviews for this product yet.</p>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <button onclick="openReviewModal()" class="text-gold font-semibold hover:underline">Be the first to leave a review</button>
                        }
                    </div>
                }
            </div>

            <div class="w-full">
                <h3 class="font-playfair text-2xl font-bold text-primary mb-8">Featured</h3>

                @if (Model.RelatedProducts.Any())
                {
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                        @foreach (var product in Model.RelatedProducts)
                        {
                            @await Html.PartialAsync("_ProductCardPartial", product)
                        }
                    </div>
                }
            </div>
        </div>

    </div>
</div>

@{
    var reviewModalModel = new { ProductId = Model.Product.Id, ProductName = Model.Product.Name, UserName = User.Identity?.Name };
}
@await Html.PartialAsync("_ModalReview", reviewModalModel)

@section Scripts {
    <script>
        let maxQty = @Model.Product.Stock;

        function increaseQty() {
            let qtyInput = document.getElementById('quantity');
            let qty = parseInt(qtyInput.value);
            if (qty < maxQty) {
                qtyInput.value = qty + 1;
            }
        }

        function decreaseQty() {
            let qtyInput = document.getElementById('quantity');
            let qty = parseInt(qtyInput.value);
            if (qty > 1) {
                qtyInput.value = qty - 1;
            }
        }

        function addToCart(productId) {
            if (typeof notificationModal === 'undefined') {
                alert('Error: Notifications modal not loading');
                return;
            }

            let quantity = parseInt(document.getElementById('quantity').value);

            fetch('/customer/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: quantity
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    notificationModal.success(
                        'Product Added!',
                        data.message,
                        () => {
                            if(typeof updateCartCount === 'function') updateCartCount();
                            document.getElementById('quantity').value = 1;
                        }
                    );
                } else {
                    notificationModal.error('Error', data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                notificationModal.error('Error', 'There was a problem connecting to the server');
            });
        }
    </script>
}