@using ECommerce.ViewModels
@model ECommerce.ViewModels.CustomerProductDetailsViewModel
@{
    ViewData["Title"] = Model.Product.Name;
    Layout = "_CustomerLayout";
}

<section class="bg-gradient-to-br from-primary via-primary/95 to-primary/90 pt-12 pb-12 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-64 h-64 bg-gold/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>

    <div class="container mx-auto px-4 relative z-10">
        <nav aria-label="breadcrumb" class="mb-6 flex justify-center">
            <ol class="flex items-center space-x-2 text-sm text-white/60">
                <li><a asp-controller="Customer" 
                       asp-action="Home" 
                       class="hover:text-gold transition-colors">Home</a></li>
                <li><i class="ph ph-caret-right text-xs"></i></li>
                <li><a asp-controller="Customer" 
                       asp-action="Products" 
                       class="hover:text-gold transition-colors">Products</a></li>
                <li><i class="ph ph-caret-right text-xs"></i></li>
                <li class="text-white font-medium truncate max-w-[200px]">@Model.Product.Name</li>
            </ol>
        </nav>

        <div class="text-center text-white">
            <h1 class="font-playfair text-3xl md:text-4xl font-bold mb-2">@Model.Product.Name</h1>
            <p class="text-white/80 text-lg">@GetMetalName(Model.Product.Metal) Collection</p>
        </div>
    </div>
</section>

<div class="bg-cream py-12 pb-24">
    <div class="container mx-auto px-4">

        <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100 mb-16">
            <div class="grid lg:grid-cols-2 gap-0">

                <div class="bg-gray-50 p-8 lg:p-12 flex items-center justify-center relative group">
                    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-white to-transparent opacity-50"></div>

                    <div class="relative z-10 w-full h-[400px] lg:h-[500px] flex items-center justify-center transition-transform duration-500 group-hover:scale-105">
                        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                        {
                            <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" id="mainImage" class="max-w-full max-h-full object-contain drop-shadow-2xl">
                        }
                        else
                        {
                            <div class="text-gray-300 text-8xl">
                                <i class="ph ph-image"></i>
                            </div>
                        }
                    </div>

                    <div class="absolute top-6 left-6 flex flex-col gap-2">
                        @if (Model.Product.Stock == 0)
                        {
                            <span class="bg-red-500 text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-lg flex items-center gap-1">
                                <i class="ph-fill ph-prohibit"></i> Out of Stock
                            </span>
                        }
                        else if (Model.Product.Stock < 5)
                        {
                            <span class="bg-yellow-400 text-primary px-4 py-1.5 rounded-full text-sm font-bold shadow-lg flex items-center gap-1">
                                <i class="ph-fill ph-fire"></i> Last Pieces!
                            </span>
                        }
                    </div>
                </div>

                <div class="p-8 lg:p-12 flex flex-col justify-center">

                    <div class="flex justify-between items-start mb-4">
                        <span class="text-sm uppercase tracking-wider text-gold font-bold">
                            @GetMetalName(Model.Product.Metal) &bull; @Model.Product.Purity
                        </span>

                        <div class="flex items-center gap-2 bg-cream px-3 py-1 rounded-full">
                            <div class="flex text-gold text-sm">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Floor(Model.AverageRating))
                                    {
                                        <i class="ph-fill ph-star"></i>
                                    }
                                    else if (i == Math.Ceiling(Model.AverageRating) && Model.AverageRating % 1 != 0)
                                    {

                                        <i class="ph-fill ph-star-half"></i>
                                    }
                                    else
                                    {

                                        <i class="ph ph-star text-gray-300"></i>
                                    }
                                }
                            </div>
                            <span class="text-xs font-semibold text-primary">@Model.AverageRating.ToString("0.0")</span>
                            <span class="text-xs text-gray-500">(@Model.ReviewCount reviews)</span>
                        </div>
                    </div>

                    <h2 class="font-playfair text-4xl font-bold text-primary mb-6">@Model.Product.Name</h2>

                    <div class="flex items-end gap-4 mb-8 pb-8 border-b border-gray-100">
                        <span class="text-5xl font-bold text-gold">$@Model.Product.Price.ToString("N0")</span>
                        @if (Model.Product.OriginalPrice > Model.Product.Price)
                        {
                            <span class="text-xl text-gray-400 line-through mb-2">$@Model.Product.OriginalPrice.ToString("N0")</span>
                        }
                        <span class="text-sm text-gray-400 mb-2">VAT Included</span>
                    </div>

                    <div class="prose prose-sm text-gray-600 mb-8 leading-relaxed">
                        <p>@Model.Product.Description</p>
                    </div>

                    <div class="grid grid-cols-3 gap-4 mb-8">
                        <div class="bg-cream rounded-xl p-4 flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-gold shadow-sm">
                                <i class="ph-fill ph-sketch-logo text-xl"></i>
                            </div>
                            <div>
                                <span class="block text-[10px] text-gray-500 uppercase tracking-wider font-bold">Material</span>
                                <span class="font-semibold text-primary">@GetMetalName(Model.Product.Metal)</span>
                            </div>
                        </div>
                        <div class="bg-cream rounded-xl p-4 flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-gold shadow-sm">
                                <i class="ph-fill ph-certificate text-xl"></i>
                            </div>
                            <div>
                                <span class="block text-[10px] text-gray-500 uppercase tracking-wider font-bold">Purity</span>
                                <span class="font-semibold text-primary">@Model.Product.Purity</span>
                            </div>
                        </div>
                        <div class="bg-cream rounded-xl p-4 flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-gold shadow-sm">
                                <i class="ph-fill ph-package text-xl"></i>
                            </div>
                            <div>
                                <span class="block text-[10px] text-gray-500 uppercase tracking-wider font-bold">Stock</span>
                                <span class="font-semibold text-primary">@Model.Product.Stock</span>
                            </div>
                        </div>
                    </div>

                    @if (Model.Categories.Any())
                    {
                        <div class="flex flex-wrap gap-2 mb-8">
                            @foreach (var category in Model.Categories)
                            {
                                <a asp-controller="Customer" 
                                   asp-action="Products" 
                                   asp-route-categoryId="@category.Id"
                                   class="px-3 py-1 rounded-lg border border-gray-200 text-sm text-gray-500 hover:border-gold hover:text-gold transition-colors">
                                    #@category.Name
                                </a>
                            }
                        </div>
                    }

                    @if (Model.Product.Stock > 0)
                    {
                        <div class="flex flex-col sm:flex-row gap-4 mt-auto">

                            <div class="flex items-center bg-gray-50 rounded-full px-2 border border-gray-200 sm:w-auto w-full justify-between h-14">
                                <button type="button" class="w-12 h-full flex items-center justify-center text-gray-500 hover:text-primary transition" onclick="decreaseQty()">
                                    <i class="ph ph-minus font-bold"></i>
                                </button>

                                <input type="number" id="quantity" value="1" min="1" max="@Model.Product.Stock" class="w-12 text-center bg-transparent border-none font-bold text-primary focus:ring-0 p-0 text-lg" readonly>

                                <button type="button" class="w-12 h-full flex items-center justify-center text-gray-500 hover:text-primary transition" onclick="increaseQty()">
                                    <i class="ph ph-plus font-bold"></i>
                                </button>
                            </div>

                            @if (Model.LoggedIn)
                            {
                                <button type="button" onclick="addToCart(@Model.Product.Id)"
                                        class="flex-1 bg-primary hover:bg-primary/90 text-white h-14 rounded-full font-bold text-lg shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-3 group">
                                    <span>Add to Cart</span>
                                    <i class="ph ph-shopping-cart font-bold text-xl group-hover:text-gold transition-colors"></i>
                                </button>
                            }
                            else
                            {
                                <a href="/auth/login?returnUrl=@Context.Request.Path"
                                   class="flex-1 bg-primary hover:bg-primary/90 text-white h-14 rounded-full font-bold text-lg shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-3 group">
                                    <span>Add to Cart</span>
                                    <i class="ph ph-shopping-cart font-bold text-xl group-hover:text-gold transition-colors"></i>
                                </a>
                            }

                        </div>
                    }
                    else
                    {
                        <div class="bg-red-50 border border-red-100 text-red-600 px-6 py-4 rounded-2xl flex items-center gap-3">
                            <i class="ph-fill ph-bell-slash text-2xl"></i>
                            <div>
                                <span class="font-bold block">Currently Unavailable</span>
                                <span class="text-sm">We will notify you when this item is back in stock.</span>
                            </div>
                        </div>
                    }

                    <div class="flex items-center justify-between mt-8 pt-6 border-t border-gray-100 text-xs text-gray-500 font-medium">
                        <div class="flex items-center gap-2"><i class="ph-fill ph-shield-check text-green-500 text-lg"></i> Secure Payment</div>
                        <div class="flex items-center gap-2"><i class="ph-fill ph-truck text-gold text-lg"></i> Free Shipping</div>
                        <div class="flex items-center gap-2"><i class="ph-fill ph-arrow-counter-clockwise text-blue-500 text-lg"></i> 30-Day Returns</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-col gap-8">
            <div class="w-full">
                <div class="flex items-center justify-between mb-8">
                    <h3 class="font-playfair text-3xl font-bold text-primary">Customer Reviews</h3>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <button type="button" onclick="window.openReviewModal ? window.openReviewModal() : alert('Loading...')"
                                class="text-gold font-bold hover:underline flex items-center gap-2 transition-all">
                            <i class="ph-bold ph-pencil-simple"></i> Write a Review
                        </button>
                    }
                </div>

                @if (Model.Reviews.Any())
                {
                    <div class="space-y-4">
                        @foreach (var review in Model.Reviews.Take(5))
                        {
                            <div class="bg-white p-6 rounded-3xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                                <div class="flex justify-between items-start mb-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-gold/20 to-gold/40 text-primary flex items-center justify-center font-bold text-sm shadow-inner">
                                            @review.User?.Name.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <h6 class="font-bold text-primary text-sm">@review.User?.Name</h6>
                                            <span class="text-xs text-gray-400 font-medium">@review.CreatedAt.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="flex text-gold text-xs bg-cream px-2 py-1 rounded-lg">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="ph-fill ph-star @(i <= review.Rating ? "" : "text-gray-300")"></i>
                                        }
                                    </div>
                                </div>
                                <div class="relative pl-4 border-l-2 border-gold/30">
                                    <p class="text-gray-600 text-sm leading-relaxed italic">"@review.Comment"</p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="bg-white rounded-3xl p-12 text-center border border-dashed border-gray-200">
                        <div class="w-16 h-16 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-4 text-gray-300">
                            <i class="ph-fill ph-chat-teardrop-text text-3xl"></i>
                        </div>
                        <p class="text-gray-500 mb-6 text-lg">No reviews yet for this product.</p>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <button onclick="window.openReviewModal()" class="bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-full font-bold transition-all shadow-lg hover:shadow-xl">
                                Be the first to review
                            </button>
                        }
                        else
                        {
                            <a href="/auth/login?returnUrl=@Context.Request.Path" class="text-gold font-bold hover:underline">Log in to write a review</a>
                        }
                    </div>
                }
            </div>

            <div class="w-full">
                <h3 class="font-playfair text-2xl font-bold text-primary mb-8">You May Also Like</h3>

                @if (Model.RelatedProducts.Any())
                {
                    <div class="grid grid-cols-4 gap-6">
                        @foreach (var product in Model.RelatedProducts)
                        {
                            @await Html.PartialAsync("_ProductCardPartial", product)
                        }
                    </div>
                }
            </div>
        </div>

    </div>
</div>

@{
    var reviewModalModel = new ReviewCreateViewModel
    {
        ProductId = Model.Product.Id,
        ProductName = Model.Product.Name,
        ProductImageUrl = Model.Product.ImageUrl ?? string.Empty
    };
}

@await Html.PartialAsync("_ModalReview", reviewModalModel)
@functions {
    string GetMetalName(string metal)
    {
        return metal switch
        {
            "Gold" => "Gold",
            "Silver" => "Silver",
            "Platinum" => "Platinum",
            _ => metal
        };
    }
}

@section Scripts {
    <script>
        let maxQty = @Model.Product.Stock;

        function increaseQty() {
            let qtyInput = document.getElementById('quantity');
            let qty = parseInt(qtyInput.value);
            if (qty < maxQty) {
                qtyInput.value = qty + 1;
            }
        }

        function decreaseQty() {
            let qtyInput = document.getElementById('quantity');
            let qty = parseInt(qtyInput.value);
            if (qty > 1) {
                qtyInput.value = qty - 1;
            }
        }
    </script>
}