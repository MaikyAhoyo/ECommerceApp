@model IEnumerable<ECommerce.Models.Entities.Order>
@{
    ViewData["Title"] = "My Orders";
    Layout = "_CustomerLayout";
}

<section class="bg-gradient-to-br from-primary via-primary/95 to-primary/90 py-16">
    <nav aria-label="breadcrumb" class="mb-6 flex justify-center">
        <ol class="flex items-center space-x-2 text-sm text-white/60">
            <li><a asp-controller="Customer" 
                   asp-action="Home" 
                   class="hover:text-gold transition-colors">Home</a></li>
            <li><i class="ph ph-caret-right text-xs"></i></li>
            <li class="text-white font-medium truncate max-w-[200px]">My Orders</li>
        </ol>
    </nav>

    <div class="container mx-auto px-4 text-center text-white">
        <h1 class="font-playfair text-4xl md:text-5xl font-bold mb-4">
            Your Orders
        </h1>
        <p class="text-xl text-white/90">Find your orders and their status</p>
    </div>
</section>

<div class="py-12 pb-20">
    <div class="container mx-auto px-4">
        @if (Model != null && Model.Any())
        {
            <div class="space-y-6">
                @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
                {
                    @await Html.PartialAsync("_OrderItemsCardPartial", order)
                }
            </div>
        }
        else
        {
            <div class="bg-white rounded-xl p-12 text-center border border-gray-200">
                <h2 class="text-2xl font-bold text-gray-800 mb-2">No orders found</h2>
                <p class="text-gray-600 mb-6">You haven't placed any orders yet.</p>
                <a asp-controller="Customer" 
                   asp-action="Products" 
                   class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold transition">View Products</a>
            </div>
        }
    </div>
</div>
