@model ECommerce.Models.Entities.ShippingAddress
@{
    ViewData["Title"] = "Add Address";
    Layout = "_CustomerLayout";
}

<div class="py-12">
    <div class="container mx-auto px-4 max-w-2xl">
        <h1 class="text-4xl font-bold text-gray-800 mb-8">Add New Address</h1>

        <form method="post" action="/customer/addresses/create" class="bg-white rounded-xl p-8 border border-gray-200">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <div class="grid grid-cols-1 gap-6">
                <div>
                    <label asp-for="AddressLine1" class="block text-sm font-medium text-gray-700 mb-2">Address Line 1 *</label>
                    <input asp-for="AddressLine1" type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Street address" required>
                    <span asp-validation-for="AddressLine1" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="AddressLine2" class="block text-sm font-medium text-gray-700 mb-2">Address Line 2 (Optional)</label>
                    <input asp-for="AddressLine2" type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Apartment, suite, etc.">
                </div>

                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label asp-for="City" class="block text-sm font-medium text-gray-700 mb-2">City *</label>
                        <input asp-for="City" type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                        <span asp-validation-for="City" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="State" class="block text-sm font-medium text-gray-700 mb-2">State/Province *</label>
                        <input asp-for="State" type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                        <span asp-validation-for="State" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label asp-for="PostalCode" class="block text-sm font-medium text-gray-700 mb-2">Postal Code *</label>
                        <input asp-for="PostalCode" type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                        <span asp-validation-for="PostalCode" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Country" class="block text-sm font-medium text-gray-700 mb-2">Country *</label>
                        <input asp-for="Country" type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                        <span asp-validation-for="Country" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="submit" class="flex-1 px-6 py-3 bg-gold hover:bg-gold-dark text-white rounded-lg font-semibold transition">
                        Add Address
                    </button>
                    <a href="/customer/addresses" class="flex-1 px-6 py-3 border border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition text-center">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}