@model ECommerce.ViewModels.ReviewCreateViewModel

<div id="reviewModal" class="hidden fixed inset-0 z-[9999] flex items-center justify-center">
    <div class="absolute inset-0 bg-primary/40 backdrop-blur-sm" data-action="close"></div>

    <div class="relative bg-white rounded-3xl shadow-2xl w-full max-w-lg mx-4 overflow-hidden">

        <!-- HEADER -->
        <div class="bg-white px-8 py-6 border-b border-gray-100 flex items-center justify-between">
            <h2 class="font-playfair text-2xl font-bold text-primary flex items-center gap-2">
                <i class="ph ph-fill ph-star text-gold"></i> Write a Review
            </h2>
            <button type="button" data-action="close"
                    class="w-10 h-10 rounded-full bg-gray-50 text-gray-400 hover:bg-red-50">
                <i class="ph ph-x text-xl"></i>
            </button>
        </div>

        <!-- FORM -->
        <form method="post" asp-controller="Customer" asp-action="CreateReview" class="p-8">

            @Html.AntiForgeryToken()

            <!-- Hidden fields -->
            <input asp-for="ProductId" type="hidden" />
            <input asp-for="Rating" type="hidden" id="reviewRating" />

            <!-- PRODUCT INFO -->
            <div class="bg-cream/50 rounded-2xl p-4 mb-8 flex items-center gap-4 border border-gold/10">
                <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center shadow-sm text-gold">
                    <i class="ph ph-fill ph-package text-2xl"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wider font-bold">Product</p>
                    <p class="font-playfair font-bold text-primary text-lg">@Model.ProductName</p>
                </div>
            </div>

            <!-- STAR RATING -->
            <div class="mb-8 text-center">
                <label asp-for="Rating" class="block text-sm font-bold text-gray-700 mb-3"></label>

                <div id="starContainer" class="flex justify-center gap-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <button type="button"
                                class="star-btn text-4xl text-gray-200 hover:scale-110 transition p-1"
                                data-rating="@i">
                            <i class="ph ph-fill ph-star"></i>
                        </button>
                    }
                </div>

                <span asp-validation-for="Rating"
                      id="ratingError"
                      class="text-red-500 text-xs font-bold mt-2 hidden"></span>
            </div>

            <!-- COMMENT -->
            <div class="mb-2">
                <label asp-for="Comment" class="block text-sm font-bold text-gray-700 mb-2"></label>

                <textarea asp-for="Comment"
                          id="reviewComment"
                          placeholder="What did you like or dislike?"
                          class="w-full h-32 p-4 bg-gray-50 border border-gray-200 rounded-2xl"
                          maxlength="500"></textarea>

                <span asp-validation-for="Comment"
                      id="commentError"
                      class="text-red-500 text-xs font-bold mt-2 hidden"></span>
            </div>

            <!-- BUTTONS -->
            <div class="px-0 mt-6 flex gap-4">
                <button type="button" data-action="close"
                        class="flex-1 px-6 py-3 border border-gray-300 text-gray-600 font-bold rounded-xl">
                    Cancel
                </button>

                <button type="submit"
                        onclick="return validateReviewForm()"
                        class="flex-[2] px-6 py-3 bg-primary text-white font-bold rounded-xl">
                    Submit Review
                </button>
            </div>
        </form>
    </div>
</div>

<!-- SCRIPT -->
<script>
(function () {
    let selectedRating = 0;

    // Classes
    const CLASS_ACTIVE = ['text-gold', 'scale-110'];
    const CLASS_INACTIVE = ['text-gray-200'];

    // Render stars based on selected rating
    function renderStars() {
        document.querySelectorAll('.star-btn').forEach((btn, idx) => {
            btn.classList.remove(...CLASS_ACTIVE, ...CLASS_INACTIVE);

            if (idx < selectedRating) {
                btn.classList.add(...CLASS_ACTIVE);
            } else {
                btn.classList.add(...CLASS_INACTIVE);
            }
        });
    }

    // Initialize star buttons
    function initStars() {
        document.querySelectorAll('.star-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                selectedRating = parseInt(btn.dataset.rating);
                document.getElementById('reviewRating').value = selectedRating;

                document.getElementById('ratingError').classList.add('hidden');

                renderStars();
            });
        });
    }

    // Validate before submit
    window.validateReviewForm = function () {
        let valid = true;

        const rating = parseInt(document.getElementById('reviewRating').value);
        const comment = document.getElementById('reviewComment').value.trim();

        if (rating === 0) {
            document.getElementById('ratingError').classList.remove('hidden');
            valid = false;
        }

        if (comment.length === 0) {
            document.getElementById('commentError').classList.remove('hidden');
            valid = false;
        }

        return valid;
    };

    // Modal logic
    function initModal() {
        const modal = document.getElementById("reviewModal");

        document.querySelectorAll('[data-action="close"]').forEach(btn => {
            btn.addEventListener('click', () => modal.classList.add('hidden'));
        });

        // function to open modal
        window.openReviewModal = () => modal.classList.remove('hidden');
    }

    initStars();
    initModal();
})();
</script>
