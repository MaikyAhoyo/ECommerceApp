@model ECommerce.ViewModels.ReviewCreateViewModel

<div id="reviewModal" class="hidden fixed inset-0 z-[9999] flex items-center justify-center">
    <div class="absolute inset-0 bg-primary/40 backdrop-blur-sm" data-action="close"></div>

    <div class="relative bg-white rounded-3xl shadow-2xl w-full max-w-lg mx-4 overflow-hidden animate-slideIn">

        <div class="bg-white px-8 py-6 border-b border-gray-100 flex items-center justify-between">
            <h2 class="font-playfair text-2xl font-bold text-primary flex items-center gap-2">
                <i class="ph-fill ph-star text-gold"></i> Write a Review
            </h2>
            <button type="button" data-action="close" class="w-10 h-10 rounded-full bg-gray-50 text-gray-400 hover:bg-red-50 hover:text-red-500 transition-colors">
                <i class="ph ph-x text-xl"></i>
            </button>
        </div>

        <form method="post" asp-controller="Customer" asp-action="CreateReview" class="p-8">
            @Html.AntiForgeryToken()

            <input asp-for="ProductId" type="hidden" />

            <input asp-for="Rating" type="hidden" id="reviewRating" value="0" />

            <div class="bg-cream/50 rounded-2xl p-4 mb-8 flex items-center gap-4 border border-gold/10">
                <div class="w-16 h-16 bg-white rounded-xl flex items-center justify-center shadow-sm overflow-hidden border border-gray-100">
                    @if (!string.IsNullOrEmpty(Model.ProductImageUrl))
                    {
                        <img src="@Model.ProductImageUrl" class="w-full h-full object-contain p-1" />
                    }
                    else
                    {
                        <i class="ph-fill ph-package text-2xl text-gold"></i>
                    }
                </div>
                <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wider font-bold">Product</p>
                    <p class="font-playfair font-bold text-primary text-lg leading-tight">@Model.ProductName</p>
                </div>
            </div>

            <div class="mb-8 text-center">
                <label class="block text-sm font-bold text-gray-700 mb-3">Rate this product</label>

                <div id="starContainer" class="flex justify-center gap-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <button type="button"
                                class="star-btn text-4xl text-gray-200 hover:scale-110 transition p-1 focus:outline-none"
                                data-rating="@i">
                            <i class="ph-fill ph-star"></i>
                        </button>
                    }
                </div>
                <span asp-validation-for="Rating" id="ratingError" class="text-red-500 text-xs font-bold mt-2 hidden">Please select a rating</span>
            </div>

            <div class="mb-2">
                <label asp-for="Comment" class="block text-sm font-bold text-gray-700 mb-2">Comment (Optional)</label>
                <textarea asp-for="Comment"
                          id="reviewComment"
                          placeholder="Tell us what you like or dislike about this product..."
                          class="w-full h-32 p-4 bg-gray-50 border border-gray-200 rounded-2xl focus:border-gold focus:ring-1 focus:ring-gold outline-none transition-all resize-none"
                          maxlength="1000"></textarea>
                <span asp-validation-for="Comment" class="text-red-500 text-xs font-bold mt-2"></span>
            </div>

            <div class="px-0 mt-8 flex gap-4">
                <button type="button" data-action="close"
                        class="flex-1 px-6 py-3 border border-gray-300 text-gray-600 font-bold rounded-xl hover:bg-gray-50 transition-colors">
                    Cancel
                </button>

                <button type="submit"
                        onclick="return validateReviewForm()"
                        class="flex-[2] px-6 py-3 bg-primary text-white font-bold rounded-xl hover:bg-primary/90 shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition-all">
                    Submit Review
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    (function () {
        let selectedRating = 0;

        const CLASS_ACTIVE = ['text-gold', 'scale-110'];
        const CLASS_INACTIVE = ['text-gray-200'];

        function renderStars() {
            document.querySelectorAll('.star-btn').forEach((btn, idx) => {
                btn.classList.remove(...CLASS_ACTIVE, ...CLASS_INACTIVE);

                if (idx < selectedRating) {
                    btn.classList.add(...CLASS_ACTIVE);
                } else {
                    btn.classList.add(...CLASS_INACTIVE);
                }
            });
        }

        function initStars() {
            document.querySelectorAll('.star-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    selectedRating = parseInt(btn.dataset.rating);
                    document.getElementById('reviewRating').value = selectedRating;
                    document.getElementById('ratingError').classList.add('hidden');
                    renderStars();
                });
            });
        }

        window.validateReviewForm = function () {
            let valid = true;
            const rating = parseInt(document.getElementById('reviewRating').value);

            if (rating === 0 || isNaN(rating)) {
                document.getElementById('ratingError').classList.remove('hidden');
                valid = false;
            }

            return valid;
        };
        
        function initModal() {
            const modal = document.getElementById("reviewModal");
            if(!modal) return;

            document.querySelectorAll('[data-action="close"]').forEach(btn => {
                btn.addEventListener('click', () => modal.classList.add('hidden'));
            });

            window.openReviewModal = () => modal.classList.remove('hidden');
        }

        initStars();
        initModal();
    })();
</script>