@model ECommerce.Models.Entities.ShippingAddress
@{
    ViewData["Title"] = "Edit Address";
    Layout = "_CustomerLayout";
}

<section class="bg-gradient-to-br from-primary via-primary/95 to-primary/90 py-16 relative overflow-hidden">
    <nav aria-label="breadcrumb" class="mb-6 flex justify-center">
        <ol class="flex items-center space-x-2 text-sm text-white/60">
            <li><a asp-controller="Customer" asp-action="Home" class="hover:text-gold transition-colors">Home</a></li>
            <li><i class="ph ph-caret-right text-xs"></i></li>
            <li><a asp-controller="Customer" asp-action="Addresses" class="hover:text-gold transition-colors">My Addresses</a></li>
            <li><i class="ph ph-caret-right text-xs"></i></li>
            <li class="text-white font-medium truncate max-w-[200px]">Edit Address</li>
        </ol>
    </nav>
    
    <div class="container mx-auto px-4 relative z-10 text-white text-center">
        <h1 class="font-playfair text-4xl md:text-5xl font-bold mb-4">
            Edit Address
        </h1>
        <p class="text-xl text-white/80">Update your shipping details</p>
    </div>
</section>

<div class="bg-cream py-12 pb-24 min-h-[60vh]">
    <div class="container mx-auto px-4 max-w-2xl">

        <div class="bg-white rounded-3xl shadow-lg border border-gray-100 p-8 md:p-10">
            <form method="post" asp-action="EditAddress" class="space-y-6">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />

                <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-100 text-red-600 p-4 rounded-xl text-sm"></div>

                <div>
                    <label asp-for="AddressLine1" class="block text-sm font-bold text-primary mb-2">Address Line 1 <span class="text-red-500">*</span></label>
                    <input asp-for="AddressLine1" type="text" class="w-full px-5 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:bg-white focus:border-gold focus:ring-4 focus:ring-gold/10 outline-none transition-all" placeholder="Street address, P.O. box, company name">
                    <span asp-validation-for="AddressLine1" class="text-red-500 text-xs font-semibold mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="AddressLine2" class="block text-sm font-bold text-primary mb-2">Address Line 2 <span class="text-gray-400 font-normal">(Optional)</span></label>
                    <input asp-for="AddressLine2" type="text" class="w-full px-5 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:bg-white focus:border-gold focus:ring-4 focus:ring-gold/10 outline-none transition-all" placeholder="Apartment, suite, unit, building, floor">
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="City" class="block text-sm font-bold text-primary mb-2">City <span class="text-red-500">*</span></label>
                        <input asp-for="City" type="text" class="w-full px-5 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:bg-white focus:border-gold focus:ring-4 focus:ring-gold/10 outline-none transition-all">
                        <span asp-validation-for="City" class="text-red-500 text-xs font-semibold mt-1 block"></span>
                    </div>
                    <div>
                        <label asp-for="State" class="block text-sm font-bold text-primary mb-2">State / Province <span class="text-red-500">*</span></label>
                        <input asp-for="State" type="text" class="w-full px-5 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:bg-white focus:border-gold focus:ring-4 focus:ring-gold/10 outline-none transition-all">
                        <span asp-validation-for="State" class="text-red-500 text-xs font-semibold mt-1 block"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="PostalCode" class="block text-sm font-bold text-primary mb-2">Postal Code <span class="text-red-500">*</span></label>
                        <input asp-for="PostalCode" type="text" class="w-full px-5 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:bg-white focus:border-gold focus:ring-4 focus:ring-gold/10 outline-none transition-all">
                        <span asp-validation-for="PostalCode" class="text-red-500 text-xs font-semibold mt-1 block"></span>
                    </div>
                    <div>
                        <label asp-for="Country" class="block text-sm font-bold text-primary mb-2">Country <span class="text-red-500">*</span></label>
                        <input asp-for="Country" type="text" class="w-full px-5 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:bg-white focus:border-gold focus:ring-4 focus:ring-gold/10 outline-none transition-all">
                        <span asp-validation-for="Country" class="text-red-500 text-xs font-semibold mt-1 block"></span>
                    </div>
                </div>

                <div class="flex flex-col-reverse sm:flex-row gap-4 pt-6 border-t border-gray-100 mt-8">
                    <a asp-controller="Customer" 
                       asp-action="Addresses" 
                       class="flex-1 px-6 py-3.5 border-2 border-gray-200 text-gray-600 font-bold rounded-xl hover:border-gray-300 hover:bg-gray-50 hover:text-primary transition-all text-center">
                        Cancel
                    </a>
                    <button type="submit" class="flex-1 px-6 py-3.5 bg-primary text-white font-bold rounded-xl shadow-lg hover:bg-primary/90 hover:shadow-xl hover:-translate-y-0.5 transition-all flex items-center justify-center gap-2">
                        <i class="ph ph-floppy-disk font-bold"></i>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}