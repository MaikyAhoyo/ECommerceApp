@model IEnumerable<ECommerce.Models.Entities.Review>
@{
    ViewData["Title"] = "My Reviews";
    Layout = "_CustomerLayout";
}

<div class="py-12 pb-20">
    <div class="container mx-auto px-4">
        <!-- Page Header -->
        <div class="mb-10">
            <h1 class="text-4xl font-bold text-gray-800 mb-2">My Reviews</h1>
            <p class="text-gray-600">Manage and track all your product reviews</p>
        </div>

        <!-- Reviews List or Empty State -->
        @if (Model != null && Model.Any())
        {
            <div class="space-y-6">
                @foreach (var review in Model.OrderByDescending(r => r.CreatedAt))
                {
                    <div class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md transition-shadow p-6">
                        <!-- Review Header -->
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex-1">
                                <div class="flex items-center gap-4 mb-2">
                                    <h3 class="text-lg font-semibold text-gray-800">
                                        @(review.Product?.Name ?? "Product not found")
                                    </h3>
                                    <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full">
                                        @review.Rating
                                        <i class="ph ph-star text-yellow-500 ml-1"></i>
                                    </span>
                                </div>
                                <p class="text-sm text-gray-500">
                                    <i class="ph ph-calendar text-gray-400 mr-2"></i>
                                    @review.CreatedAt.ToString("MMMM dd, yyyy")
                                </p>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex gap-2">
                                <form method="post" action="/customer/reviews/delete/@review.Id" class="inline"
                                      onsubmit="return confirm('Are you sure you want to delete this review?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="p-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all"
                                            title="Delete review">
                                        <i class="ph ph-trash text-xl"></i>
                                    </button>
                                </form>
                            </div>
                        </div>

                        <!-- Star Rating -->
                        <div class="flex items-center gap-4 mb-4">
                            <div class="flex text-yellow-500 text-lg">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    @if (i <= review.Rating)
                                    {
                                        <i class="ph-fill ph-star"></i>
                                    }
                                    else
                                    {
                                        <i class="ph ph-star text-gray-300"></i>
                                    }
                                }
                            </div>
                            <span class="text-sm text-gray-600">
                                @switch (review.Rating)
                                {
                                    case 5:
                                        <span>Excellent</span>
                                        break;
                                    case 4:
                                        <span>Good</span>
                                        break;
                                    case 3:
                                        <span>Average</span>
                                        break;
                                    case 2:
                                        <span>Poor</span>
                                        break;
                                    case 1:
                                        <span>Very Poor</span>
                                        break;
                                }
                            </span>
                        </div>

                        <!-- Review Comment -->
                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-100">
                            <p class="text-gray-700 leading-relaxed">@review.Comment</p>
                        </div>

                        <!-- View Product Link -->
                        <div class="mt-4 pt-4 border-t border-gray-100">
                            <a href="/customer/products/details/@review.ProductId"
                               class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 text-sm font-medium transition">
                                <i class="ph ph-arrow-up-right"></i>
                                View Product
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- Statistics Summary -->
            <div class="mt-12 grid grid-cols-1 md:grid-cols-4 gap-4">
                
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="bg-gradient-to-b from-gray-50 to-gray-100 rounded-2xl p-12 text-center border border-gray-200">
                <div class="mb-6 flex justify-center">
                    <div class="w-20 h-20 bg-gray-200 rounded-full flex items-center justify-center">
                        <i class="ph ph-star text-4xl text-gray-400"></i>
                    </div>
                </div>
                
                <h2 class="text-2xl font-bold text-gray-800 mb-2">No Reviews Yet</h2>
                <p class="text-gray-600 mb-8 max-w-md mx-auto">
                    You haven't written any reviews yet. Start sharing your experiences with our products!
                </p>

                <div class="space-y-3">
                    <p class="text-gray-600 text-sm mb-4">How to write a review:</p>
                    <ol class="text-left inline-block space-y-2 text-sm text-gray-700">
                        <li class="flex items-center gap-2">
                            <span class="bg-blue-600 text-white w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">1</span>
                            <span>Browse our products</span>
                        </li>
                        <li class="flex items-center gap-2">
                            <span class="bg-blue-600 text-white w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">2</span>
                            <span>Click on a product you've purchased</span>
                        </li>
                        <li class="flex items-center gap-2">
                            <span class="bg-blue-600 text-white w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">3</span>
                            <span>Click "Write a Review" button</span>
                        </li>
                        <li class="flex items-center gap-2">
                            <span class="bg-blue-600 text-white w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">4</span>
                            <span>Share your experience with other customers</span>
                        </li>
                    </ol>
                </div>

                <a href="/customer/products"
                   class="inline-flex items-center gap-2 mt-8 px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition">
                    <i class="ph ph-shopping-bag"></i>
                    Browse Products
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // You can add additional JavaScript for review interactions here if needed
        document.addEventListener('DOMContentLoaded', () => {
            // Add any review-specific interactions
        });
    </script>
}
