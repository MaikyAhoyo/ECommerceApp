@model ECommerce.ViewModels.CustomerCartViewModel
@{
    ViewData["Title"] = "Carrito de Compras";
    Layout = "_CustomerLayout";
}

<div class="py-15 bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-gray-800 my-10 flex items-center">
            <i class="ph-bold ph-shopping-cart mr-3"></i>Carrito de Compras
        </h1>

        @if (Model.Items != null && Model.Items.Any())
        {
            <div class="grid lg:grid-cols-12 gap-6">
                <!-- Cart Items -->
                <div class="lg:col-span-8">
                    <div class="bg-white rounded-2xl p-6 shadow-sm">
                        @foreach (var item in Model.Items)
                        {
                            <div class="grid grid-cols-[80px_1fr] lg:grid-cols-[100px_1fr_120px_120px_120px_50px] gap-5 items-center py-5 border-b border-gray-200 last:border-b-0" data-item-id="@item.Id">
                                <div class="w-20 h-20 lg:w-24 lg:h-24 bg-gray-100 rounded-xl overflow-hidden">
                                    @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                                    {
                                        <img src="@item.ProductImageUrl" alt="@item.ProductName" class="w-full h-full object-cover">
                                    }
                                    else
                                    {
                                        <div class="w-full h-full flex items-center justify-center text-gray-400 text-4xl">
                                            <i class="ph ph-image"></i>
                                        </div>
                                    }
                                </div>

                                <div>
                                    <h5 class="text-base font-semibold text-gray-800 mb-1">@item.ProductName</h5>
                                    <p class="text-gray-500 text-sm">@GetMetalName(item.Metal) @item.Purity </p>
                                    <div class="flex justify-between items-center mt-3 lg:hidden">
                                        <span class="text-green-600 font-bold text-lg">$@item.UnitPrice.ToString("N2")</span>
                                        <button  type="button" class="text-red-500 text-xl hover:text-red-700 transition" onclick="removeItem(@item.Id)">
                                            <i class="ph-bold ph-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="hidden lg:flex items-center border-2 border-gray-200 rounded-lg overflow-hidden w-fit">
                                    <button type="button" class="w-9 h-9 bg-gray-100 hover:bg-yellow-500 hover:text-white transition" onclick="updateQuantity(@item.Id, @item.Quantity - 1)">
                                        <i class="ph ph-minus"></i>
                                    </button>
                                    <input type="number" value="@item.Quantity" min="1" max="@item.MaxStock" class="w-12 h-9 text-center border-none font-semibold select-none px-0 py-0 leading-none cursor-pointer" readonly onfocus="this.blur()" onmousedown="return false" aria-label="Cantidad">
                                    <button type="button" class="w-9 h-9 bg-gray-100 hover:bg-yellow-500 hover:text-white transition" onclick="updateQuantity(@item.Id, @item.Quantity + 1)">
                                        <i class="ph ph-plus"></i>
                                    </button>
                                </div>
                                <div class="hidden lg:block text-center">
                                    <span class="text-gray-500 text-sm">$@item.UnitPrice.ToString("N2")</span>
                                </div>

                                <div class="hidden lg:block text-center">
                                    <span class="text-green-600 font-bold text-lg">$@item.Subtotal.ToString("N2")</span>
                                </div>

                                <div class="hidden lg:block">
                                    <button type="button" class="text-red-500 text-xl hover:text-red-700 hover:scale-110 transition" onclick="removeItem(@item.Id)">
                                        <i class="ph-bold ph-x"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Continue Shopping -->
                    <div class="mt-5">
                        <a href="/customer/products" class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-xl font-semibold hover:bg-gray-100 transition">
                            <i class="ph-bold ph-arrow-left mr-2"></i>Seguir Comprando
                        </a>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="lg:col-span-4">
                    <div class="bg-white rounded-2xl p-8 shadow-sm lg:sticky lg:top-24">
                        <h4 class="text-xl font-bold text-gray-800 mb-6">Resumen del Pedido</h4>

                        <div class="flex justify-between mb-4 text-gray-800">
                            <span>Subtotal (@Model.ItemCount items)</span>
                            <span>$@Model.Subtotal.ToString("N2")</span>
                        </div>

                        <div class="flex justify-between mb-4 text-gray-800">
                            <span>Envío</span>
                            <span>
                                @if (Model.Shipping == 0)
                                {
                                    <span class="text-green-600">Gratis</span>
                                }
                                else
                                {
                                    <span>$@Model.Shipping.ToString("N2")</span>
                                }
                            </span>
                        </div>

                        <div class="flex justify-between mb-4 text-gray-800">
                            <span>IVA (16%)</span>
                            <span>$@Model.Tax.ToString("N2")</span>
                        </div>

                        <div class="h-px bg-gray-200 my-5"></div>

                        <div class="flex justify-between text-2xl font-bold text-gray-800 mb-6">
                            <span>Total</span>
                            <span>$@Model.Total.ToString("N2")</span>
                        </div>

                        <button type="button" class="w-full h-14 bg-gradient-to-r from-yellow-500 to-orange-500 text-white font-bold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition mb-6" onclick="goToCheckout()">
                            <i class="ph-bold ph-lock mr-2"></i>Proceder al Pago
                        </button>

                        <!-- Trust Badges -->
                        <div class="pt-5 border-t border-gray-200 space-y-3">
                            <div class="flex items-center gap-3 text-gray-500 text-sm">
                                <i class="ph-fill ph-shield-check text-green-600 text-lg"></i>
                                <span>Pago Seguro</span>
                            </div>
                            <div class="flex items-center gap-3 text-gray-500 text-sm">
                                <i class="ph-fill ph-truck text-green-600 text-lg"></i>
                                <span>Envío Gratis</span>
                            </div>
                            <div class="flex items-center gap-3 text-gray-500 text-sm">
                                <i class="ph-fill ph-arrow-u-up-left text-green-600 text-lg"></i>
                                <span>Devolución Fácil</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl py-24 px-10 text-center shadow-sm">
                <i class="ph ph-shopping-cart text-9xl text-gray-300 mb-8"></i>
                <h3 class="text-3xl font-bold text-gray-800 mb-4">Tu carrito está vacío</h3>
                <p class="text-gray-500 text-lg mb-8">Agrega productos para comenzar tu compra</p>
                <a href="/customer/products" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-yellow-500 to-orange-500 text-white font-bold text-lg rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition">
                    <i class="ph-bold ph-shopping-bag mr-2"></i>Explorar Productos
                </a>
            </div>
        }
    </div>
</div>

@functions {
    string GetMetalName(string metal)
    {
        return metal switch
        {
            "Gold" => "Oro",
            "Silver" => "Plata",
            "Platinum" => "Platino",
            _ => metal
        };
    }
}

@section Scripts {
    <script>
        function updateQuantity(itemId, newQuantity) {
            if (newQuantity < 1) return;

            fetch(`/customer/cart/update/${itemId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ quantity: newQuantity })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al actualizar la cantidad');
            });
        }

        function removeItem(itemId) {
            if (!confirm('¿Eliminar este producto del carrito?')) return;

            fetch(`/customer/cart/remove/${itemId}`, {
                method: 'POST'
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Error al eliminar el producto');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al eliminar el producto');
            });
        }

        function goToCheckout() {
            window.location.href = '/customer/checkout';
        }
    </script>
}