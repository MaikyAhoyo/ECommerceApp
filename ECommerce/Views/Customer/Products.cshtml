@model ECommerce.ViewModels.CustomerProductsViewModel
@{
    ViewData["Title"] = "Products";
    Layout = "_CustomerLayout";
    var metal = Model.CurrentSearch ?? "";
    var categoryId = Model.CurrentCategoryId?.ToString() ?? "";
    var search = Model.CurrentSearch ?? "";
    int currentPageSize = Convert.ToInt32(ViewBag.PageSize ?? 12);
}

<!-- Page Header -->
<section class="bg-gradient-to-br from-primary via-primary/95 to-primary/90 py-16">
    <div class="container mx-auto px-4 text-center text-white">
        <h1 class="font-playfair text-4xl md:text-5xl font-bold mb-4">
            @if (!string.IsNullOrEmpty(search))
            {
                <span class="font-playfair">Results for "<span class="text-gold">@search</span>"</span>
            }
            else if (!string.IsNullOrEmpty(metal))
            {
                <span class="font-playfair"><span class="text-gold">@GetMetalName(metal)</span> Collection</span>
            }
            else if (Model.CurrentCategoryId.HasValue)
            {
                var category = Model.Categories.FirstOrDefault(c => c.Id == Model.CurrentCategoryId.Value);
                if (category != null)
                {
                    <span class="font-playfair"><span class="text-gold">@category.Name</span></span>
                }
                else
                {
                    <span class="font-playfair">All Products</span>
                }
            }
            else
            {
                <span class="font-playfair">All Products</span>
            }
        </h1>
        <p class="text-xl text-white/90">Find your perfect piece</p>
    </div>
</section>

<div class="bg-cream py-12">
    <div class="container mx-auto px-4">
        <div class="grid lg:grid-cols-4 gap-8">

            <!-- Filters Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl p-6 shadow-lg sticky top-24">
                    <div class="flex items-center space-x-2 mb-6 pb-4 border-b-2 border-gray-100">
                        <i class="ph ph-faders text-2xl text-gold"></i>
                        <h5 class="font-semibold text-lg text-primary">Filters</h5>
                    </div>

                    <form method="get" 
                          asp-controller="Customer" 
                          asp-action="Products" 
                          class="space-y-6">

                        <!-- Search -->
                        <div>
                            <label class="block text-sm font-semibold text-primary mb-2">Search</label>
                            <div class="relative">
                                <input type="text"
                                       name="search"
                                       value="@search"
                                       class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-2.5 pr-10 transition-all"
                                       placeholder="Search products...">
                                <i class="ph ph-magnifying-glass absolute right-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            </div>
                        </div>

                        <!-- Metal -->
                        <div>
                            <label class="block text-sm font-semibold text-primary mb-2">Metal</label>
                            <select name="metal"
                                    class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-2.5 transition-all">
                                <option value="">All Metals</option>
                                <option value="Gold" selected="@(Model.CurrentSearch == "Gold")">Gold</option>
                                <option value="Silver" selected="@(Model.CurrentSearch == "Silver")">Silver</option>
                                <option value="Platinum" selected="@(Model.CurrentSearch == "Platinum")">Platinum</option>
                            </select>
                        </div>

                        <!-- Category -->
                        @if (Model.Categories != null && Model.Categories.Any())
                        {
                            <div>
                                <label class="block text-sm font-semibold text-primary mb-2">Category</label>
                                <select name="categoryId"
                                        class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-2.5 transition-all">
                                    <option value="">All Categories</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Id" selected="@(Model.CurrentCategoryId == category.Id)">@category.Name</option>
                                    }
                                </select>
                            </div>
                        }

                        <!-- Price Range -->
                        <div>
                            <label class="block text-sm font-semibold text-primary mb-2">Price Range</label>
                            <div class="space-y-2">
                                <div class="flex items-center space-x-2">
                                    <input type="number"
                                           name="minPrice"
                                           value="@Model.CurrentMinPrice"
                                           placeholder="Min"
                                           class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-2 transition-all text-sm">
                                    <span class="text-gray-400">-</span>
                                    <input type="number"
                                           name="maxPrice"
                                           value="@Model.CurrentMaxPrice"
                                           placeholder="Max"
                                           class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-2 transition-all text-sm">
                                </div>
                            </div>
                        </div>

                        <!-- Sort -->
                        <div>
                            <label class="block text-sm font-semibold text-primary mb-2">Sort By</label>
                            <select name="sortBy"
                                    class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-2.5 transition-all">
                                <option value="">Newest First</option>
                                <option value="price_asc" selected="@(Model.CurrentSortBy == "price_asc")">Price: Low to High</option>
                                <option value="price_desc" selected="@(Model.CurrentSortBy == "price_desc")">Price: High to Low</option>
                                <option value="name" selected="@(Model.CurrentSortBy == "name")">Name: A-Z</option>
                            </select>
                        </div>

                        <!-- Buttons -->
                        <div class="space-y-2">
                            <button type="submit"
                                    class="w-full bg-gold hover:bg-gold-dark text-white font-semibold py-3 rounded-xl transition-all duration-300 shadow-md hover:shadow-lg flex items-center justify-center space-x-2">
                                <i class="ph ph-funnel text-lg"></i>
                                <span>Apply Filters</span>
                            </button>
                            <a asp-controller="Customer" 
                               asp-action="Products" 
                               class="w-full bg-white hover:bg-gray-50 text-gray-700 font-semibold py-3 rounded-xl transition-all duration-300 border-2 border-gray-200 flex items-center justify-center space-x-2">
                                <i class="ph ph-arrow-clockwise text-lg"></i>
                                <span>Clear All</span>
                            </a>
                        </div>
                    </form>

                    <!-- Quick Links -->
                    <div class="mt-8 pt-6 border-t-2 border-gray-100">
                        <h6 class="text-sm font-semibold text-primary mb-3">Quick Links</h6>
                        <div class="space-y-2">
                            <a asp-controller="Customer" 
                               asp-action="Products" 
                               asp-route-metal="Gold"
                               class="flex items-center space-x-3 px-4 py-2.5 rounded-xl hover:bg-gray-50 transition-colors group">
                                <i class="ph-fill ph-crown text-gold text-lg"></i>
                                <span class="text-gray-700 group-hover:text-gold transition-colors">Gold Collection</span>
                            </a>
                            <a asp-controller="Customer" 
                               asp-action="Products" 
                               asp-route-metal="Silver"
                               class="flex items-center space-x-3 px-4 py-2.5 rounded-xl hover:bg-gray-50 transition-colors group">
                                <i class="ph-fill ph-star text-gray-400 text-lg"></i>
                                <span class="text-gray-700 group-hover:text-gold transition-colors">Silver Collection</span>
                            </a>
                            <a asp-controller="Customer" 
                               asp-action="Products" 
                               asp-route-metal="Platinum"
                               class="flex items-center space-x-3 px-4 py-2.5 rounded-xl hover:bg-gray-50 transition-colors group">
                                <i class="ph-fill ph-diamond text-slate-500 text-lg"></i>
                                <span class="text-gray-700 group-hover:text-gold transition-colors">Platinum Collection</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-3">

                <div class="bg-white rounded-2xl p-4 shadow-lg mb-8 flex justify-between items-center">
                    <span class="font-semibold text-primary">
                        <span class="text-gold">@Model.TotalProducts</span> products found
                    </span>

                    <form method="get" asp-action="Products" class="flex items-center space-x-2">
                        <input type="hidden" name="search" value="@Model.SearchTerm">
                        <input type="hidden" name="metal" value="@Model.CurrentMetal">
                        <input type="hidden" name="categoryId" value="@Model.CurrentCategoryId">
                        <input type="hidden" name="minPrice" value="@Model.CurrentMinPrice">
                        <input type="hidden" name="maxPrice" value="@Model.CurrentMaxPrice">
                        <input type="hidden" name="sortBy" value="@Model.CurrentSortBy">
                        <input type="hidden" name="page" value="1"> <label class="text-sm text-gray-600 hidden sm:inline">Show:</label>
                        <select name="pageSize"
                                onchange="this.form.submit()"
                                class="rounded-xl border-2 border-gray-200 focus:border-gold outline-none px-2 py-1 text-sm font-medium transition-all">
                            <option value="12" selected="@(currentPageSize == 12)">12</option>
                            <option value="24" selected="@(currentPageSize == 24)">24</option>
                            <option value="48" selected="@(currentPageSize == 48)">48</option>
                        </select>
                    </form>
                </div>

                @if (Model.Products != null && Model.Products.Any())
                {
                    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                        @foreach (var product in Model.Products)
                        {
                            @await Html.PartialAsync("_ProductCardPartial", product)
                        }
                    </div>
                }
                else
                {
                    <div class="bg-white rounded-2xl p-20 text-center">
                    </div>
                }

                @if (Model.TotalPages > 1)
                {
                    <div class="bg-white rounded-2xl p-4 shadow-lg flex flex-col sm:flex-row justify-between items-center gap-4">
                        <div class="text-sm text-gray-600">
                            Page <span class="font-semibold text-primary">@Model.CurrentPage</span> of <span class="font-semibold text-primary">@Model.TotalPages</span>
                        </div>

                        <div class="flex items-center space-x-2">
                            @if (Model.CurrentPage > 2)
                            {
                                <a href="@GetPageUrl(1)"
                                   class="w-10 h-10 flex items-center justify-center rounded-xl border-2 border-gray-200 hover:border-gold hover:bg-gold hover:text-white transition-all"
                                   title="First Page">
                                    <i class="ph ph-caret-double-left"></i>
                                </a>
                            }

                            @if (Model.CurrentPage > 1)
                            {
                                <a href="@GetPageUrl(Model.CurrentPage - 1)"
                                   class="w-10 h-10 flex items-center justify-center rounded-xl border-2 border-gray-200 hover:border-gold hover:bg-gold hover:text-white transition-all"
                                   title="Previous">
                                    <i class="ph ph-caret-left"></i>
                                </a>
                            }

                            @{
                                var startPage = Math.Max(1, Model.CurrentPage - 2);
                                var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                if (i == Model.CurrentPage)
                                {
                                    <div class="w-10 h-10 flex items-center justify-center rounded-xl bg-gold text-white font-bold shadow-md">@i</div>
                                }
                                else
                                {
                                    <a href="@GetPageUrl(i)"
                                       class="w-10 h-10 flex items-center justify-center rounded-xl border-2 border-gray-200 hover:border-gold hover:bg-gold hover:text-white transition-all font-medium">@i</a>
                                }
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <a href="@GetPageUrl(Model.CurrentPage + 1)"
                                   class="w-10 h-10 flex items-center justify-center rounded-xl border-2 border-gray-200 hover:border-gold hover:bg-gold hover:text-white transition-all"
                                   title="Next">
                                    <i class="ph ph-caret-right"></i>
                                </a>
                            }

                            @if (Model.CurrentPage < Model.TotalPages - 1)
                            {
                                <a href="@GetPageUrl(Model.TotalPages)"
                                   class="w-10 h-10 flex items-center justify-center rounded-xl border-2 border-gray-200 hover:border-gold hover:bg-gold hover:text-white transition-all"
                                   title="Last Page">
                                    <i class="ph ph-caret-double-right"></i>
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
        </div>
    </div>
</div>

@functions {
    string GetMetalName(string metal)
    {
        return metal switch
        {
            "Gold" => "Gold",
            "Silver" => "Silver",
            "Platinum" => "Platinum",
            _ => metal
        };
    }

    string GetPageUrl(int page)
    {
        var pageSize = ViewBag.PageSize;
        var queryParams = new List<string>
        {
            $"page={page}",
            $"pageSize={pageSize}"
        };

        if (!string.IsNullOrEmpty(Model.SearchTerm))
            queryParams.Add($"search={Uri.EscapeDataString(Model.SearchTerm)}");

        if (!string.IsNullOrEmpty(Model.CurrentMetal))
            queryParams.Add($"metal={Uri.EscapeDataString(Model.CurrentMetal)}");

        if (Model.CurrentCategoryId.HasValue)
            queryParams.Add($"categoryId={Model.CurrentCategoryId}");

        if (Model.CurrentMinPrice.HasValue)
            queryParams.Add($"minPrice={Model.CurrentMinPrice}");

        if (Model.CurrentMaxPrice.HasValue)
            queryParams.Add($"maxPrice={Model.CurrentMaxPrice}");

        if (!string.IsNullOrEmpty(Model.CurrentSortBy))
            queryParams.Add($"sortBy={Model.CurrentSortBy}");

        return $"/customer/products?{string.Join("&", queryParams)}";
    }
}

@section Styles {
    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
}