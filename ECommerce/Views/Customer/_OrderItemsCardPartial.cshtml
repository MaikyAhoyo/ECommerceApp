@using ECommerce.Models.Entities
@model Order

<div class="bg-white rounded-3xl p-6 border border-gray-100 shadow-sm hover:shadow-lg transition-all duration-300 group">

    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6 mb-6">

        <div>
            <div class="flex items-center gap-3 mb-2">
                <h3 class="font-playfair text-2xl font-bold text-primary">Order #@Model.Id</h3>

                @if (Model.Status == "Pending")
                {
                    <span class="px-3 py-1 rounded-full bg-yellow-100 text-yellow-700 text-xs font-bold uppercase tracking-wider flex items-center gap-1">
                        <i class="ph-fill ph-clock"></i> Pending
                    </span>
                }
                else if (Model.Status == "Confirmed" || Model.Status == "Delivered")
                {
                    <span class="px-3 py-1 rounded-full bg-green-100 text-green-700 text-xs font-bold uppercase tracking-wider flex items-center gap-1">
                        <i class="ph-fill ph-check-circle"></i> @Model.Status
                    </span>
                }
                else if (Model.Status == "Cancelled")
                {
                    <span class="px-3 py-1 rounded-full bg-red-100 text-red-700 text-xs font-bold uppercase tracking-wider flex items-center gap-1">
                        <i class="ph-fill ph-x-circle"></i> Cancelled
                    </span>
                }
                else if (Model.Status == "Shipped")
                {
                    <span class="px-3 py-1 rounded-full bg-purple-100 text-purple-700 text-xs font-bold uppercase tracking-wider flex items-center gap-1">
                        <i class="ph-fill ph-truck"></i> Shipped
                    </span>
                }
                else
                {
                    <span class="px-3 py-1 rounded-full bg-gray-100 text-gray-600 text-xs font-bold uppercase tracking-wider">
                        @Model.Status
                    </span>
                }
            </div>

            <div class="flex items-center text-sm text-gray-500 gap-4">
                <span class="flex items-center gap-1">
                    <i class="ph ph-calendar"></i>
                    @Model.OrderDate.ToString("MMM dd, yyyy")
                </span>
                <span class="w-1 h-1 rounded-full bg-gray-300"></span>
                <span class="flex items-center gap-1">
                    <i class="ph ph-package"></i>
                    @(Model.OrderItems?.Sum(i => i.Quantity) ?? 0) Items
                </span>
            </div>
        </div>

        <div class="flex flex-col md:items-end gap-4">
            <div class="text-left md:text-right">
                <p class="text-xs text-gray-400 font-bold uppercase tracking-wider">Total Amount</p>
                <p class="text-2xl font-bold text-gold">$@String.Format("{0:N2}", Model.Total)</p>
            </div>

            <div class="flex items-center gap-3">
                @if (Model.Status == "Pending")
                {
                    <form method="post" 
                          asp-controller="Customer" 
                          asp-action="CancelOrder" 
                          asp-route-id="@Model.Id" 
                          class="cancel-order-form">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="px-4 py-2 rounded-xl border border-red-200 text-red-500 hover:bg-red-50 hover:text-red-600 text-sm font-semibold transition-colors flex items-center gap-2">
                            <i class="ph-bold ph-x"></i> Cancel
                        </button>
                    </form>
                }

                <a asp-controller="Customer" 
                   asp-action="OrderDetails" 
                   asp-route-id="@Model.Id" 
                   class="px-5 py-2 rounded-xl bg-primary text-white hover:bg-primary/90 text-sm font-semibold shadow-md hover:shadow-lg transition-all flex items-center gap-2">
                    <span>View Details</span>
                    <i class="ph-bold ph-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    @if (Model.OrderItems != null && Model.OrderItems.Any())
    {
        <div class="bg-gray-50 rounded-2xl p-4 border border-gray-100">
            <div class="space-y-3">
                @foreach (var item in Model.OrderItems.Take(3))
                {
                    <a asp-controller="Customer"
                       asp-action="ProductDetails"
                       asp-route-id="@item.ProductId"
                       class="flex items-center justify-between group/item p-2 rounded-xl hover:bg-white transition-colors">

                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 bg-white rounded-lg border border-gray-200 flex items-center justify-center overflow-hidden shadow-sm">
                                @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                {
                                    <img src="@item.Product.ImageUrl" alt="@item.Product?.Name" class="w-full h-full object-contain p-1">
                                }
                                else
                                {
                                    <i class="ph ph-image text-gray-300 text-xl"></i>
                                }
                            </div>

                            <div>
                                <p class="text-sm font-bold text-primary group-hover/item:text-gold transition-colors line-clamp-1">
                                    @item.Product?.Name
                                </p>
                                <p class="text-xs text-gray-500">
                                    Qty: <span class="font-medium text-gray-700">@item.Quantity</span>
                                    &bull;
                                    $@String.Format("{0:N2}", item.UnitPrice)
                                </p>
                            </div>
                        </div>

                        <div class="text-sm font-semibold text-gray-700">
                            $@String.Format("{0:N2}", item.Quantity * item.UnitPrice)
                        </div>
                    </a>
                }

                @if (Model.OrderItems.Count() > 3)
                {
                    <div class="pt-2 text-center border-t border-gray-200/50">
                        <a asp-controller="Customer" 
                           asp-action="OrderDetails" 
                           asp-route-id="@Model.Id" 
                           class="text-xs font-semibold text-gray-500 hover:text-gold transition-colors">
                            + @(Model.OrderItems.Count() - 3) more items...
                        </a>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Cancel Order Modal -->
<div id="cancelOrderModal" class="fixed inset-0 bg-black bg-opacity-40 backdrop-blur-sm hidden items-center justify-center z-[9999]">
    <div class="bg-white rounded-3xl p-8 max-w-md w-full mx-4 shadow-2xl border border-gray-200 transform transition-all scale-95 opacity-0" id="cancelModalContent">
        
        <!-- Header con ícono de advertencia -->
        <div class="flex items-center justify-center mb-6">
            <div class="w-16 h-16 bg-red-50 rounded-full flex items-center justify-center">
                <i class="ph-fill ph-warning-circle text-4xl text-red-500"></i>
            </div>
        </div>

        <!-- Contenido del modal -->
        <div class="text-center mb-8">
            <h3 class=" text-2xl font-bold text-primary mb-3">Cancel Order</h3>
            <p class="text-gray-600 leading-relaxed">
                Are you sure you want to cancel this order? This action cannot be undone and any payment will be refunded within 5-7 business days.
            </p>
        </div>

        <!-- Información de la orden -->
        <div class="bg-gray-50 rounded-2xl p-4 mb-6 border border-gray-100">
            <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Order Number:</span>
                <span class="font-bold text-primary" id="orderNumber">#---</span>
            </div>
            <div class="flex items-center justify-between text-sm mt-2">
                <span class="text-gray-600">Total Amount:</span>
                <span class="font-bold text-gold" id="orderTotal">$0.00</span>
            </div>
        </div>

        <!-- Botones de acción -->
        <div class="flex gap-3">
            <button id="cancelCancelOrder" class="flex-1 px-6 py-3 rounded-xl border-2 border-gray-200 text-gray-700 font-bold hover:bg-gray-50 hover:border-gray-300 transition-all">
                Keep Order
            </button>
            <button id="confirmCancelOrder" class="flex-1 px-6 py-3 rounded-xl bg-red-500 text-white font-bold hover:bg-red-600 shadow-lg hover:shadow-xl transition-all flex items-center justify-center gap-2">
                <i class="ph-bold ph-x-circle"></i>
                <span>Cancel Order</span>
            </button>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const modal = document.getElementById("cancelOrderModal");
        const modalContent = document.getElementById("cancelModalContent");
        const confirmBtn = document.getElementById("confirmCancelOrder");
        const cancelBtn = document.getElementById("cancelCancelOrder");
        const orderNumberEl = document.getElementById("orderNumber");
        const orderTotalEl = document.getElementById("orderTotal");

        let formToSubmit = null;

        // Interceptar submit de formularios de cancelación
        document.addEventListener("submit", function (e) {
            const form = e.target;
            if (!form.classList.contains("cancel-order-form")) return;

            e.preventDefault();
            formToSubmit = form;

            // Extraer datos de la orden del DOM cercano
            const orderCard = form.closest('.bg-white.rounded-3xl');
            const orderNum = orderCard?.querySelector('.font-playfair.text-2xl')?.textContent || '#---';
            const orderAmount = orderCard?.querySelector('.text-gold.text-2xl')?.textContent || '$0.00';

            // Actualizar modal con datos de la orden
            orderNumberEl.textContent = orderNum;
            orderTotalEl.textContent = orderAmount;

            // Mostrar modal con animación
            modal.classList.remove("hidden");
            modal.classList.add("flex");
            
            setTimeout(() => {
                modalContent.classList.remove("scale-95", "opacity-0");
                modalContent.classList.add("scale-100", "opacity-100");
            }, 10);
        });

        // Botón "Keep Order" (cancelar la cancelación)
        cancelBtn.addEventListener("click", () => {
            closeModal();
        });

        // Botón "Cancel Order" (confirmar cancelación)
        confirmBtn.addEventListener("click", () => {
            if (formToSubmit) {
                // Deshabilitar botón para evitar doble submit
                confirmBtn.disabled = true;
                confirmBtn.innerHTML = '<i class="ph ph-spinner animate-spin text-xl"></i> Processing...';
                
                formToSubmit.submit();
            }
        });

        // Cerrar al hacer clic fuera del modal
        modal.addEventListener("click", (e) => {
            if (e.target === modal) {
                closeModal();
            }
        });

        // Cerrar con tecla ESC
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape" && modal.classList.contains("flex")) {
                closeModal();
            }
        });

        function closeModal() {
            // Animación de salida
            modalContent.classList.remove("scale-100", "opacity-100");
            modalContent.classList.add("scale-95", "opacity-0");
            
            setTimeout(() => {
                modal.classList.add("hidden");
                modal.classList.remove("flex");
                formToSubmit = null;
                
                // Reset botón
                confirmBtn.disabled = false;
                confirmBtn.innerHTML = '<i class="ph-bold ph-x-circle"></i><span>Cancel Order</span>';
            }, 200);
        }
    });
</script>