@model ECommerce.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<section class="min-h-screen w-full flex items-center justify-center bg-cream px-4 py-12">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-8 md:p-10 border border-gray-100 relative overflow-hidden">

        <!-- Decorative elements -->
        <div class="absolute top-0 left-0 w-32 h-32 bg-gradient-to-br from-gold/20 to-transparent rounded-br-full"></div>
        <div class="absolute bottom-0 right-0 w-32 h-32 bg-gradient-to-tl from-gold/10 to-transparent rounded-tl-full"></div>

        <!-- Header -->
        <div class="relative z-10 text-center mb-8">
            <h2 class="font-playfair text-3xl font-bold text-gray-900 mb-2">Create Account</h2>
            <p class="text-gray-600 text-sm">Join <span class="text-gold font-semibold">Lumière</span> and discover elegance</p>
        </div>

        <!-- Form -->
        <form method="post" asp-action="Register" class="space-y-5 relative z-10">
            @Html.AntiForgeryToken()

            <!-- Validation Summary -->
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4">
                    @Html.ValidationSummary(true, "", new { @class = "text-red-600" })
                </div>
            }

            <!-- Name -->
            <div>
                <label for="Name" class="block text-sm font-medium text-gray-700 mb-1">
                    Full Name
                </label>
                <input id="Name"
                       name="Name"
                       type="text"
                       value="@Model?.Name"
                       class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gold focus:border-gold transition p-3 outline-none"
                       placeholder="John Doe"
                       required />
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Email -->
            <div>
                <label for="Email" class="block text-sm font-medium text-gray-700 mb-1">
                    Email Address
                </label>
                <input id="Email"
                       name="Email"
                       type="email"
                       value="@Model?.Email"
                       class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gold focus:border-gold transition p-3 outline-none"
                       placeholder="you@example.com"
                       required />
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Password -->
            <div>
                <label for="Password" class="block text-sm font-medium text-gray-700 mb-1">
                    Password
                </label>
                <input id="Password"
                       name="Password"
                       type="password"
                       class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gold focus:border-gold transition p-3 outline-none"
                       placeholder="••••••••"
                       minlength="6"
                       required />
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Confirm Password -->
            <div>
                <label for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">
                    Confirm Password
                </label>
                <input id="ConfirmPassword"
                       name="ConfirmPassword"
                       type="password"
                       class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gold focus:border-gold transition p-3 outline-none"
                       placeholder="••••••••"
                       minlength="6"
                       required />
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Register as Vendor -->
            <div class="bg-gray-50 rounded-lg p-4">
                <label class="inline-flex items-center cursor-pointer">
                    <input id="RegisterAsVendor"
                           name="RegisterAsVendor"
                           type="checkbox"
                           value="true"
                           class="rounded border-gray-300 text-gold focus:ring-gold" />
                    <input type="hidden" name="RegisterAsVendor" value="false" />
                    <span class="ml-2 text-sm text-gray-700">
                        Register as <span class="font-semibold text-gold">Vendor</span>
                        <span class="block text-xs text-gray-500 mt-1">Create and sell your own products</span>
                    </span>
                </label>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full bg-gold hover:bg-gold-dark text-white font-semibold py-3 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg">
                Create Account
            </button>
        </form>

        <!-- Login Link -->
        <div class="relative z-10 text-center mt-6 text-sm text-gray-600">
            <p>
                Already have an account?
                <a href="/auth/login" class="text-gold font-semibold hover:text-gold-dark cursor-pointer transition">Sign in</a>
            </p>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}