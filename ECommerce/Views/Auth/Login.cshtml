@model ECommerce.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<section class="min-h-screen w-full flex items-center justify-center bg-cream px-4 py-12">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-8 md:p-10 border border-gray-100 relative overflow-hidden">

        <!-- Decorative elements -->
        <div class="absolute top-0 left-0 w-32 h-32 bg-gradient-to-br from-gold/20 to-transparent rounded-br-full"></div>
        <div class="absolute bottom-0 right-0 w-32 h-32 bg-gradient-to-tl from-gold/10 to-transparent rounded-tl-full"></div>

        <!-- Header -->
        <div class="relative z-10 text-center mb-10">
            <h2 class="font-playfair text-3xl font-bold text-gray-900 mb-2">Welcome Back</h2>
            <p class="text-gray-600 text-sm">Continue your journey with <span class="text-gold font-semibold">Lumière</span></p>
        </div>

        <!-- Form -->
        <form method="post" asp-action="Login" class="space-y-6 relative z-10">
            @Html.AntiForgeryToken()

            <!-- Validation Summary -->
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="text-red-600 text-sm bg-red-50 p-3 rounded-lg">
                    @Html.ValidationSummary(true, "", new { @class = "text-red-600" })
                </div>
            }

            <input type="hidden" name="ReturnUrl" value="@Model?.ReturnUrl" />

            <!-- Email -->
            <div>
                <label for="Email" class="block text-sm font-medium text-gray-700 mb-1">
                    Email Address
                </label>
                <input id="Email"
                       name="Email"
                       type="email"
                       value="@Model?.Email"
                       class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gold focus:border-gold transition p-3 outline-none"
                       placeholder="you@example.com"
                       required />
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Password -->
            <div>
                <label for="Password" class="block text-sm font-medium text-gray-700 mb-1">
                    Password
                </label>
                <input id="Password"
                       name="Password"
                       type="password"
                       class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gold focus:border-gold transition p-3 outline-none"
                       placeholder="••••••••"
                       required />
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Forgot Password -->
            <div class="flex items-center justify-between text-sm">
                <a href="/auth/forgot-password" class="text-gold hover:text-gold-dark font-medium transition">Forgot password?</a>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full bg-gold hover:bg-gold-dark text-white font-semibold py-3 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg">
                Sign In
            </button>
        </form>

        <!-- Register Link -->
        <div class="relative z-10 text-center mt-8 text-sm text-gray-600">
            <p>
                Don't have an account?
                <a href="/auth/register" class="text-gold font-semibold hover:text-gold-dark cursor-pointer transition">Sign up</a>
            </p>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}