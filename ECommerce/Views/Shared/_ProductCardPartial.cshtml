@model ECommerce.Models.Entities.Product
<div class="card mb-3" style="width: 18rem;">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">$@Model.Price</p>
        <a href="@Url.Action("Details", "Products", new { id = Model.Id })" class="btn btn-primary">View</a>
    </div>
</div>
