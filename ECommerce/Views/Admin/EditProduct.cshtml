@model ECommerce.ViewModels.ProductEditViewModel
@{
    ViewData["Title"] = "Edit Product";
    Layout = "_AdminLayout";
}

<div class="mb-8">
    <div class="flex items-center space-x-3 mb-2">
        <a asp-controller="Admin"
           asp-action="Products"
           
            class="w-10 h-10 bg-gray-100 hover:bg-gray-200 rounded-xl flex items-center justify-center transition-colors">
            <i class="ph ph-arrow-left text-xl text-gray-600"></i>
        </a>
        <div>
            <h1 class="font-playfair text-3xl font-bold text-primary">Edit Product</h1>
            <p class="text-gray-600">Update product information</p>
        </div>
    </div>
</div>

<div class="max-w-4xl">
    <form asp-action="Edit" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 rounded-xl p-4 text-red-800 text-sm"></div>

        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="bg-gradient-to-r from-gold to-gold-dark px-6 py-4">
                <h3 class="text-lg font-semibold text-white flex items-center space-x-2">
                    <i class="ph-fill ph-info text-xl"></i>
                    <span>Product Information</span>
                </h3>
            </div>

            <div class="p-6 space-y-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-semibold text-primary mb-2">Product Name *</label>
                    <input asp-for="Name"
                           class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-3 transition-all">
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Description" class="block text-sm font-semibold text-primary mb-2">Description *</label>
                    <textarea asp-for="Description"
                              rows="4"
                              class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-3 transition-all resize-none"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Price" class="block text-sm font-semibold text-primary mb-2">Price ($) *</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">$</span>
                            <input asp-for="Price"
                                   type="number"
                                   step="0.01"
                                   class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none pl-8 pr-4 py-3 transition-all">
                        </div>
                        <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Stock" class="block text-sm font-semibold text-primary mb-2">Stock *</label>
                        <input asp-for="Stock"
                               type="number"
                               class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-3 transition-all">
                        <span asp-validation-for="Stock" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="ImageUrl" class="block text-sm font-semibold text-primary mb-2">Image URL</label>
                    <input asp-for="ImageUrl"
                           class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-3 transition-all">
                    <span asp-validation-for="ImageUrl" class="text-red-500 text-sm"></span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="bg-gradient-to-r from-purple-500 to-purple-700 px-6 py-4">
                <h3 class="text-lg font-semibold text-white flex items-center space-x-2">
                    <i class="ph-fill ph-sparkle text-xl"></i>
                    <span>Metal Specifications</span>
                </h3>
            </div>

            <div class="p-6 space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Metal" class="block text-sm font-semibold text-primary mb-2">Metal Type *</label>
                        <select asp-for="Metal"
                                class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-3 transition-all">
                            <option value="">Select Metal Type</option>
                            <option value="Gold">Gold</option>
                            <option value="Silver">Silver</option>
                            <option value="Platinum">Platinum</option>
                        </select>
                        <span asp-validation-for="Metal" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Purity" class="block text-sm font-semibold text-primary mb-2">Purity *</label>
                        <input asp-for="Purity"
                               type="number"
                               step="0.001"
                               class="w-full rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-4 py-3 transition-all">
                        <span asp-validation-for="Purity" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.AvailableCategories != null && Model.AvailableCategories.Any())
        {
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                <div class="bg-gradient-to-r from-blue-500 to-blue-700 px-6 py-4">
                    <h3 class="text-lg font-semibold text-white flex items-center space-x-2">
                        <i class="ph-fill ph-tag text-xl"></i>
                        <span>Categories</span>
                    </h3>
                </div>

                <div class="p-6">
                    <div class="grid md:grid-cols-2 gap-4">
                        @for (int i = 0; i < Model.AvailableCategories.Count; i++)
                        {
                            var category = Model.AvailableCategories[i];
                            var isSelected = Model.SelectedCategoryIds?.Contains(category.Id) ?? false;
                            <label class="flex items-center space-x-3 p-4 rounded-xl border-2 @(isSelected ? "border-gold bg-gold/5" : "border-gray-200") hover:border-gold cursor-pointer transition-all">
                                <input type="checkbox"
                                       name="SelectedCategoryIds"
                                       value="@category.Id"
                                       checked="@isSelected"
                                       class="w-5 h-5 text-gold rounded focus:ring-gold focus:ring-2">
                                <span class="text-gray-700 font-medium">@category.Name</span>
                            </label>
                        }
                    </div>
                </div>
            </div>
        }

        <div class="flex flex-col sm:flex-row gap-4">
            <button type="submit"
                    class="flex-1 bg-gold hover:bg-gold-dark text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 shadow-lg hover:shadow-xl flex items-center justify-center space-x-2">
                <i class="ph ph-check-circle text-xl"></i>
                <span>Update Product</span>
            </button>
            <a href="/admin/products"
               class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 px-8 py-4 rounded-xl font-semibold transition-all duration-300 flex items-center justify-center space-x-2">
                <i class="ph ph-x-circle text-xl"></i>
                <span>Cancel</span>
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}