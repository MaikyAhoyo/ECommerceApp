@model ECommerce.ViewModels.ProductEditViewModel
@{
    ViewData["Title"] = "Editar Producto";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="page-header-back">
    <a href="/admin/products" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Volver
    </a>
    <div>
        <h1><i class="fas fa-edit me-2"></i>Editar Producto</h1>
        <p class="text-muted">Modifica la información del producto</p>
    </div>
</div>

<form asp-action="EditProduct" asp-route-id="@Model.Id" method="post">
    <div class="row g-4">
        <!-- Main Info Card -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle me-2"></i>Información del Producto</h5>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label required">Nombre del Producto</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label required">Descripción</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label required">Precio</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Stock" class="form-label required">Stock</label>
                            <input asp-for="Stock" type="number" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">URL de la Imagen</label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> Deja vacío para mantener la imagen actual
                        </small>
                    </div>
                </div>
            </div>

            <!-- Categories Card -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="fas fa-tags me-2"></i>Categorías</h5>
                </div>
                <div class="card-body">
                    @if (Model.AvailableCategories != null && Model.AvailableCategories.Any())
                    {
                        <div class="categories-grid">
                            @foreach (var category in Model.AvailableCategories)
                            {
                                var isChecked = Model.SelectedCategoryIds?.Contains(category.Id) ?? false;
                                <div class="form-check category-item">
                                    <input type="checkbox"
                                           class="form-check-input"
                                           name="SelectedCategoryIds"
                                           value="@category.Id"
                                           id="category_@category.Id"
                                           @(isChecked ? "checked" : "")>
                                    <label class="form-check-label" for="category_@category.Id">
                                        @category.Name
                                    </label>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            No hay categorías disponibles.
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Metal & Purity Card -->
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-gem me-2"></i>Especificaciones</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Metal" class="form-label required">Metal</label>
                        <select asp-for="Metal" class="form-select">
                            <option value="">Seleccionar metal</option>
                            <option value="Gold">Oro</option>
                            <option value="Silver">Plata</option>
                            <option value="Platinum">Platino</option>
                        </select>
                        <span asp-validation-for="Metal" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Purity" class="form-label required">Pureza</label>
                        <input asp-for="Purity" type="number" step="0.001" class="form-control" />
                        <span asp-validation-for="Purity" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Oro: 14, 18, 24<br />
                            Plata: 925<br />
                            Platino: 950
                        </small>
                    </div>
                </div>
            </div>

            <!-- Image Preview Card -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="fas fa-image me-2"></i>Vista Previa</h5>
                </div>
                <div class="card-body text-center">
                    <div id="imagePreview" class="image-preview-container">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Producto">
                        }
                        else
                        {
                            <i class="fas fa-image"></i>
                            <p>Sin imagen</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Current Categories -->
            @if (Model.CurrentCategories != null && Model.CurrentCategories.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5><i class="fas fa-list me-2"></i>Categorías Actuales</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var category in Model.CurrentCategories)
                        {
                            <span class="badge bg-primary me-2 mb-2">@category.Name</span>
                        }
                    </div>
                </div>
            }

            <!-- Actions -->
            <div class="card mt-4">
                <div class="card-body">
                    <button type="submit" class="btn btn-primary w-100 mb-2">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                    <a href="/admin/products" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Styles {
    <style>
        .page-header-back {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 30px;
        }

            .page-header-back h1 {
                font-size: 28px;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 5px;
            }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .card-header {
            background: white;
            border-bottom: 1px solid #e9ecef;
            padding: 20px;
            border-radius: 12px 12px 0 0;
        }

            .card-header h5 {
                margin: 0;
                font-weight: 600;
                color: #2c3e50;
                font-size: 16px;
            }

        .card-body {
            padding: 25px;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

            .form-label.required::after {
                content: '*';
                color: #dc3545;
                margin-left: 4px;
            }

        .form-control,
        .form-select {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 10px 15px;
            transition: all 0.3s;
        }

            .form-control:focus,
            .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

        .input-group-text {
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-right: none;
            border-radius: 8px 0 0 8px;
            font-weight: 600;
        }

        .input-group .form-control {
            border-left: none;
            border-radius: 0 8px 8px 0;
        }

        .categories-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 12px;
        }

        .category-item {
            background: #f8f9fa;
            padding: 12px 15px;
            border-radius: 8px;
            border: 2px solid transparent;
            transition: all 0.3s;
        }

            .category-item:hover {
                background: #e9ecef;
            }

            .category-item:has(input:checked) {
                background: #e8eeff;
                border-color: #667eea;
            }

        .form-check-input {
            width: 20px;
            height: 20px;
            margin-top: 0;
            cursor: pointer;
        }

            .form-check-input:checked {
                background-color: #667eea;
                border-color: #667eea;
            }

        .form-check-label {
            cursor: pointer;
            font-weight: 500;
            margin-left: 8px;
        }

        .image-preview-container {
            width: 100%;
            height: 250px;
            background: #f8f9fa;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #adb5bd;
            overflow: hidden;
        }

            .image-preview-container i {
                font-size: 60px;
                margin-bottom: 10px;
            }

            .image-preview-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .badge {
            padding: 8px 12px;
            font-size: 13px;
            font-weight: 600;
        }

        .bg-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
            }

        .alert-danger {
            border-radius: 8px;
            border-left: 4px solid #dc3545;
        }

        .text-danger {
            font-size: 13px;
            margin-top: 5px;
        }

        .form-text {
            font-size: 13px;
        }

        @@media (max-width: 768px) {
            .page-header-back {
                flex-direction: column;
            }

            .categories-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Image Preview
        document.querySelector('input[name="ImageUrl"]').addEventListener('input', function(e) {
            const url = e.target.value;
            const preview = document.getElementById('imagePreview');

            if (url) {
                preview.innerHTML = `<img src="${url}" alt="Preview" onerror="this.parentElement.innerHTML='<i class=\\'fas fa-exclamation-triangle\\'></i><p>Error al cargar imagen</p>'">`;
            } else {
                preview.innerHTML = '<i class="fas fa-image"></i><p>Sin imagen</p>';
            }
        });
    </script>
}