@model ECommerce.Models.Entities.Category
@{
    ViewData["Title"] = "Editar Categoría";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="page-header-back">
    <a href="/admin/categories" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Volver
    </a>
    <div>
        <h1><i class="fas fa-edit me-2"></i>Editar Categoría</h1>
        <p class="text-muted">Modifica la información de la categoría</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-tag me-2"></i>Información de la Categoría</h5>
            </div>
            <div class="card-body">
                <form asp-action="EditCategory" asp-route-id="@Model.Id" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label required">Nombre</label>
                        <input asp-for="Name" class="form-control form-control-lg" autofocus />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">Descripción</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                        <a href="/admin/categories" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-header-back {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 30px;
        }

            .page-header-back h1 {
                font-size: 28px;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 5px;
            }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .card-header {
            background: white;
            border-bottom: 1px solid #e9ecef;
            padding: 20px 25px;
            border-radius: 12px 12px 0 0;
        }

            .card-header h5 {
                margin: 0;
                font-weight: 600;
                color: #2c3e50;
                font-size: 18px;
            }

        .card-body {
            padding: 30px;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
            font-size: 15px;
        }

            .form-label.required::after {
                content: '*';
                color: #dc3545;
                margin-left: 4px;
            }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 12px 15px;
            transition: all 0.3s;
            font-size: 15px;
        }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

        .form-control-lg {
            padding: 15px 20px;
            font-size: 16px;
        }

        .btn {
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-lg {
            padding: 15px 40px;
            font-size: 16px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
            }

        .alert-danger {
            border-radius: 8px;
            border-left: 4px solid #dc3545;
        }

        .text-danger {
            font-size: 13px;
            margin-top: 5px;
        }

        @@media (max-width: 768px) {
            .page-header-back {
                flex-direction: column;
            }

            .d-flex {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}