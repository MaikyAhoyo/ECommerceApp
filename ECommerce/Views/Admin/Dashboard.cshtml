@model ECommerce.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="mb-8">
    <h1 class="font-playfair text-3xl font-bold text-primary mb-2">Dashboard</h1>
    <p class="text-gray-600">Welcome back! Here's what's happening with your store today.</p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mb-8">

    <!-- Total Products -->
    <div class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-100">
        <div class="flex items-center space-x-4">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-700 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <i class="ph-fill ph-package text-white text-3xl"></i>
            </div>
            <div class="flex-1">
                <h3 class="text-3xl font-bold text-primary mb-1">@Model.TotalProducts</h3>
                <p class="text-gray-600 text-sm font-medium">Total Products</p>
            </div>
        </div>
    </div>

    <!-- Total Orders -->
    <div class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-100">
        <div class="flex items-center space-x-4">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <i class="ph-fill ph-shopping-cart text-white text-3xl"></i>
            </div>
            <div class="flex-1">
                <h3 class="text-3xl font-bold text-primary mb-1">@Model.TotalOrders</h3>
                <p class="text-gray-600 text-sm font-medium">Completed Orders</p>
            </div>
        </div>
    </div>

    <!-- Total Revenue -->
    <div class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-100">
        <div class="flex items-center space-x-4">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-gold to-gold-dark rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <i class="ph-fill ph-currency-dollar text-white text-3xl"></i>
            </div>
            <div class="flex-1">
                <h3 class="text-3xl font-bold text-primary mb-1">$@Model.TotalRevenue.ToString("N2")</h3>
                <p class="text-gray-600 text-sm font-medium">Total Revenue</p>
            </div>
        </div>
    </div>

    <!-- Total Users -->
    <div class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-100">
        <div class="flex items-center space-x-4">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <i class="ph-fill ph-users text-white text-3xl"></i>
            </div>
            <div class="flex-1">
                <h3 class="text-3xl font-bold text-primary mb-1">@Model.TotalUsers</h3>
                <p class="text-gray-600 text-sm font-medium">Total Users</p>
            </div>
        </div>
    </div>
</div>

<!-- Secondary Stats -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">

    <!-- Customers -->
    <div class="bg-white rounded-2xl p-6 shadow-lg text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
        <div class="w-16 h-16 bg-purple-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="ph-fill ph-user-circle text-purple-600 text-4xl"></i>
        </div>
        <h4 class="text-3xl font-bold text-primary mb-2">@Model.TotalCustomers</h4>
        <p class="text-gray-600 font-medium">Customers</p>
    </div>

    <!-- Vendors -->
    <div class="bg-white rounded-2xl p-6 shadow-lg text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
        <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="ph-fill ph-storefront text-blue-600 text-4xl"></i>
        </div>
        <h4 class="text-3xl font-bold text-primary mb-2">@Model.TotalVendors</h4>
        <p class="text-gray-600 font-medium">Vendors</p>
    </div>

    <!-- Pending Orders -->
    <div class="bg-white rounded-2xl p-6 shadow-lg text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
        <div class="w-16 h-16 bg-yellow-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="ph-fill ph-clock text-yellow-600 text-4xl"></i>
        </div>
        <h4 class="text-3xl font-bold text-primary mb-2">@Model.PendingOrders</h4>
        <p class="text-gray-600 font-medium">Pending Orders</p>
    </div>
</div>

<!-- Recent Orders -->
<div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">

    <!-- Card Header -->
    <div class="px-6 py-5 border-b border-gray-100 flex justify-between items-center">
        <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gold/10 rounded-xl flex items-center justify-center">
                <i class="ph-fill ph-shopping-bag text-gold text-xl"></i>
            </div>
            <h5 class="font-semibold text-lg text-primary">Recent Orders</h5>
        </div>
        <a href="/admin/orders" class="inline-flex items-center space-x-2 px-4 py-2 bg-gold/10 hover:bg-gold text-gold hover:text-white rounded-xl font-medium transition-all duration-300">
            <span class="text-sm">View All</span>
            <i class="ph ph-arrow-right"></i>
        </a>
    </div>

    <!-- Card Body -->
    <div class="overflow-x-auto">
        @if (Model.RecentOrders != null && Model.RecentOrders.Any())
        {
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Order ID</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Customer</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Total</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var order in Model.RecentOrders)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4">
                                <span class="font-semibold text-primary">#@order.Id</span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-3">
                                    <div class="w-8 h-8 bg-gradient-to-br from-gold to-gold-dark rounded-full flex items-center justify-center text-white text-xs font-bold">
                                        @(order.UserId.ToString().Substring(0, 1))
                                    </div>
                                    <span class="text-gray-700 font-medium">User #@order.UserId</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-gray-600 text-sm">@order.OrderDate.ToString("MMM dd, yyyy")</span>
                                <span class="block text-xs text-gray-400">@order.OrderDate.ToString("hh:mm tt")</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="font-bold text-green-600">$@order.Total.ToString("N2")</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold @GetStatusClasses(order.Status)">
                                    @order.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 text-center">
                                <a href="/admin/orders/@order.Id" class="inline-flex items-center justify-center w-9 h-9 bg-gold/10 hover:bg-gold text-gold hover:text-white rounded-lg transition-all duration-300">
                                    <i class="ph ph-eye text-lg"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-16">
                <div class="w-20 h-20 bg-gray-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <i class="ph ph-inbox text-gray-300 text-5xl"></i>
                </div>
                <h3 class="font-semibold text-lg text-gray-900 mb-2">No Recent Orders</h3>
                <p class="text-gray-500 mb-6">Orders will appear here once customers start purchasing.</p>
                <a href="/admin/products" class="inline-flex items-center space-x-2 px-6 py-3 bg-gold hover:bg-gold-dark text-white rounded-xl font-semibold transition-all duration-300">
                    <i class="ph ph-plus-circle"></i>
                    <span>Add Products</span>
                </a>
            </div>
        }
    </div>
</div>

@functions {
    string GetStatusClasses(string status)
    {
        return status switch
        {
            "Pending" => "bg-yellow-100 text-yellow-700",
            "Confirmed" => "bg-blue-100 text-blue-700",
            "Shipped" => "bg-purple-100 text-purple-700",
            "Delivered" => "bg-green-100 text-green-700",
            "Cancelled" => "bg-red-100 text-red-700",
            _ => "bg-gray-100 text-gray-700"
        };
    }
}

@section Styles {
    <style>
        /* Custom scrollbar for table */
        .overflow-x-auto::-webkit-scrollbar {
            height: 8px;
        }

        .overflow-x-auto::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .overflow-x-auto::-webkit-scrollbar-thumb {
            background: #c9a536;
            border-radius: 10px;
        }

            .overflow-x-auto::-webkit-scrollbar-thumb:hover {
                background: #e6b944;
            }
    </style>
}