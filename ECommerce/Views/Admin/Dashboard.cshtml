@model ECommerce.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <!-- Total Products -->
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon bg-primary">
                <i class="fas fa-box"></i>
            </div>
            <div class="stats-content">
                <h3>@Model.TotalProducts</h3>
                <p>Total Productos</p>
            </div>
        </div>
    </div>

    <!-- Total Orders -->
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon bg-success">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="stats-content">
                <h3>@Model.TotalOrders</h3>
                <p>Total Órdenes</p>
            </div>
        </div>
    </div>

    <!-- Total Revenue -->
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon bg-warning">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="stats-content">
                <h3>$@Model.TotalRevenue.ToString("N2")</h3>
                <p>Ingresos Totales</p>
            </div>
        </div>
    </div>

    <!-- Total Users -->
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon bg-info">
                <i class="fas fa-users"></i>
            </div>
            <div class="stats-content">
                <h3>@Model.TotalUsers</h3>
                <p>Total Usuarios</p>
            </div>
        </div>
    </div>
</div>

<!-- Secondary Stats -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="info-card">
            <i class="fas fa-user-friends"></i>
            <h4>@Model.TotalCustomers</h4>
            <p>Clientes</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="info-card">
            <i class="fas fa-store"></i>
            <h4>@Model.TotalVendors</h4>
            <p>Vendedores</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="info-card">
            <i class="fas fa-clock"></i>
            <h4>@Model.PendingOrders</h4>
            <p>Órdenes Pendientes</p>
        </div>
    </div>
</div>

<!-- Recent Orders -->
<div class="card">
    <div class="card-header">
        <h5><i class="fas fa-shopping-bag me-2"></i>Órdenes Recientes</h5>
        <a href="/admin/orders" class="btn btn-sm btn-outline-primary">Ver Todas</a>
    </div>
    <div class="card-body">
        @if (Model.RecentOrders.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td><strong>#@order.Id</strong></td>
                                <td>@order.User?.Name</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><strong>$@order.Total.ToString("N2")</strong></td>
                                <td>
                                    <span class="badge badge-@GetStatusClass(order.Status)">
                                        @order.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="/admin/orders/details/@order.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <p>No hay órdenes recientes</p>
            </div>
        }
    </div>
</div>

@functions {
    string GetStatusClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Confirmed" => "info",
            "Shipped" => "primary",
            "Delivered" => "success",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }
}

@section Styles {
    <style>
        /* Stats Cards */
        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            display: flex;
            align-items: center;
            gap: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            height: 100%;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.12);
            }

        .stats-icon {
            width: 70px;
            height: 70px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 30px;
            color: white;
            flex-shrink: 0;
        }

            .stats-icon.bg-primary {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            }

            .stats-icon.bg-success {
                background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            }

            .stats-icon.bg-warning {
                background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            }

            .stats-icon.bg-info {
                background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            }

        .stats-content h3 {
            font-size: 32px;
            font-weight: 700;
            color: #2c3e50;
            margin: 0;
        }

        .stats-content p {
            color: #7f8c8d;
            margin: 5px 0 0;
            font-size: 14px;
        }

        /* Info Cards */
        .info-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            text-align: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }

            .info-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.12);
            }

            .info-card i {
                font-size: 40px;
                color: #667eea;
                margin-bottom: 15px;
            }

            .info-card h4 {
                font-size: 28px;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 5px;
            }

            .info-card p {
                color: #7f8c8d;
                margin: 0;
            }

        /* Card */
        .card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            border: none;
            overflow: hidden;
        }

        .card-header {
            background: white;
            border-bottom: 1px solid #e9ecef;
            padding: 20px 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .card-header h5 {
                margin: 0;
                font-weight: 600;
                color: #2c3e50;
                font-size: 18px;
            }

        .card-body {
            padding: 0;
        }

        /* Table */
        .table {
            margin: 0;
        }

            .table thead {
                background: #f8f9fa;
            }

                .table thead th {
                    border: none;
                    padding: 15px 20px;
                    font-weight: 600;
                    color: #2c3e50;
                    font-size: 14px;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                }

            .table tbody td {
                padding: 15px 20px;
                vertical-align: middle;
                border-bottom: 1px solid #f1f3f5;
            }

            .table tbody tr:hover {
                background: #f8f9fa;
            }

            .table tbody tr:last-child td {
                border-bottom: none;
            }

        /* Badges */
        .badge {
            padding: 6px 12px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge-warning {
            background: #ffeaa7;
            color: #d63031;
        }

        .badge-info {
            background: #74b9ff;
            color: #0984e3;
        }

        .badge-primary {
            background: #a29bfe;
            color: #6c5ce7;
        }

        .badge-success {
            background: #55efc4;
            color: #00b894;
        }

        .badge-danger {
            background: #ff7675;
            color: #d63031;
        }

        .badge-secondary {
            background: #dfe6e9;
            color: #2d3436;
        }

        /* Buttons */
        .btn-sm {
            padding: 6px 12px;
            font-size: 14px;
            border-radius: 6px;
        }

        .btn-outline-primary {
            color: #667eea;
            border-color: #667eea;
        }

            .btn-outline-primary:hover {
                background: #667eea;
                color: white;
            }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

            .btn-primary:hover {
                opacity: 0.9;
            }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #7f8c8d;
        }

            .empty-state i {
                font-size: 60px;
                color: #dfe6e9;
                margin-bottom: 15px;
            }

            .empty-state p {
                margin: 0;
                font-size: 16px;
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .stats-card {
                flex-direction: column;
                text-align: center;
            }

            .stats-content h3 {
                font-size: 24px;
            }

            .table-responsive {
                overflow-x: auto;
            }
        }
    </style>
}