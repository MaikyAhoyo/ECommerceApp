@model ECommerce.ViewModels.AdminSalesReportViewModel
@{
    ViewData["Title"] = "Sales Reports & Analytics";
    Layout = "_AdminLayout";
    var startDate = Context.Request.Query["startDate"].ToString();
    var endDate = Context.Request.Query["endDate"].ToString();
    var reportType = Context.Request.Query["type"].ToString();
}

<!-- Page Header -->
<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
    <div>
        <div class="flex items-center space-x-3 mb-2">
            <div class="w-10 h-10 bg-orange-100 rounded-xl flex items-center justify-center">
                <i class="ph-fill ph-chart-line text-orange-600 text-xl"></i>
            </div>
            <h1 class="font-playfair text-3xl font-bold text-primary">Sales Analytics</h1>
        </div>
        <p class="text-gray-600">Insights and performance metrics</p>
    </div>
</div>

<!-- KPI Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Total Revenue -->
    <div class="group bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 text-white overflow-hidden relative">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-bl-full"></div>
        <div class="relative z-10">
            <div class="flex items-center justify-between mb-4">
                <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform">
                    <i class="ph-fill ph-currency-dollar text-3xl"></i>
                </div>
                <div class="flex items-center space-x-1 bg-white/20 backdrop-blur-sm px-3 py-1.5 rounded-full">
                    <i class="ph-fill ph-trend-up text-sm"></i>
                    <span class="text-xs font-bold">+12.5%</span>
                </div>
            </div>
            <h3 class="text-4xl font-bold mb-1">$@Model.TotalRevenue.ToString("N2")</h3>
            <p class="text-white/80 text-sm font-medium">Total Revenue</p>
        </div>
    </div>

    <!-- Total Orders -->
    <div class="group bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 text-white overflow-hidden relative">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-bl-full"></div>
        <div class="relative z-10">
            <div class="flex items-center justify-between mb-4">
                <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform">
                    <i class="ph-fill ph-shopping-bag text-3xl"></i>
                </div>
                <div class="flex items-center space-x-1 bg-white/20 backdrop-blur-sm px-3 py-1.5 rounded-full">
                    <i class="ph-fill ph-trend-up text-sm"></i>
                    <span class="text-xs font-bold">+8.3%</span>
                </div>
            </div>
            <h3 class="text-4xl font-bold mb-1">@Model.TotalOrders</h3>
            <p class="text-white/80 text-sm font-medium">Total Orders</p>
        </div>
    </div>

    <!-- Average Order Value -->
    <div class="group bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 text-white overflow-hidden relative">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-bl-full"></div>
        <div class="relative z-10">
            <div class="flex items-center justify-between mb-4">
                <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform">
                    <i class="ph-fill ph-chart-line-up text-3xl"></i>
                </div>
                <div class="flex items-center space-x-1 bg-white/20 backdrop-blur-sm px-3 py-1.5 rounded-full">
                    <i class="ph-fill ph-trend-up text-sm"></i>
                    <span class="text-xs font-bold">+15.2%</span>
                </div>
            </div>
            <h3 class="text-4xl font-bold mb-1">$@((Model.TotalOrders > 0 ? Model.TotalRevenue / Model.TotalOrders : 0).ToString("N2"))</h3>
            <p class="text-white/80 text-sm font-medium">Avg Order Value</p>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Revenue by Status -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden hover:shadow-xl transition-shadow">
        <div class="px-6 py-5 bg-gradient-to-r from-gold/5 to-transparent border-b border-gray-100">
            <h3 class="font-semibold text-lg text-primary flex items-center space-x-2">
                <i class="ph-fill ph-chart-pie-slice text-gold text-xl"></i>
                <span>Revenue Distribution</span>
            </h3>
        </div>
        <div class="p-6">
            @if (Model.RevenueByStatus != null && Model.RevenueByStatus.Any())
            {
                <div class="space-y-5">
                    @foreach (var item in Model.RevenueByStatus.OrderByDescending(x => x.Value))
                    {
                        var percentage = (item.Value / Model.TotalRevenue) * 100;
                        var colorClass = item.Key switch
                        {
                            "Pending" => "from-yellow-400 to-yellow-500",
                            "Confirmed" => "from-blue-400 to-blue-500",
                            "Shipped" => "from-purple-400 to-purple-500",
                            "Delivered" => "from-green-400 to-green-500",
                            "Cancelled" => "from-red-400 to-red-500",
                            _ => "from-gray-400 to-gray-500"
                        };
                        <div class="space-y-2">
                            <div class="flex justify-between items-center">
                                <div class="flex items-center space-x-3">
                                    <div class="w-3 h-3 rounded-full bg-gradient-to-r @colorClass"></div>
                                    <span class="font-semibold text-gray-700">@item.Key</span>
                                </div>
                                <div class="text-right">
                                    <p class="font-bold text-primary">$@item.Value.ToString("N2")</p>
                                    <p class="text-xs text-gray-500">@percentage.ToString("F1")%</p>
                                </div>
                            </div>
                            <div class="w-full bg-gray-100 rounded-full h-3 overflow-hidden shadow-inner">
                                <div class="bg-gradient-to-r @colorClass h-3 rounded-full transition-all duration-1000 ease-out shadow-lg"
                                     style="width: @percentage%"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-8 text-gray-400">
                    <i class="ph ph-chart-pie text-6xl mb-3"></i>
                    <p>No revenue data available</p>
                </div>
            }
        </div>
    </div>

    <!-- Orders by Status -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden hover:shadow-xl transition-shadow">
        <div class="px-6 py-5 bg-gradient-to-r from-purple/5 to-transparent border-b border-gray-100">
            <h3 class="font-semibold text-lg text-primary flex items-center space-x-2">
                <i class="ph-fill ph-chart-donut text-purple-600 text-xl"></i>
                <span>Orders Distribution</span>
            </h3>
        </div>
        <div class="p-6">
            @if (Model.OrdersByStatus != null && Model.OrdersByStatus.Any())
            {
                <div class="space-y-5">
                    @foreach (var item in Model.OrdersByStatus.OrderByDescending(x => x.Value))
                    {
                        var percentage = ((decimal)item.Value / Model.TotalOrders) * 100;
                        var colorClass = item.Key switch
                        {
                            "Pending" => "from-yellow-400 to-yellow-500",
                            "Confirmed" => "from-blue-400 to-blue-500",
                            "Shipped" => "from-purple-400 to-purple-500",
                            "Delivered" => "from-green-400 to-green-500",
                            "Cancelled" => "from-red-400 to-red-500",
                            _ => "from-gray-400 to-gray-500"
                        };
                        <div class="space-y-2">
                            <div class="flex justify-between items-center">
                                <div class="flex items-center space-x-3">
                                    <div class="w-3 h-3 rounded-full bg-gradient-to-r @colorClass"></div>
                                    <span class="font-semibold text-gray-700">@item.Key</span>
                                </div>
                                <div class="text-right">
                                    <p class="font-bold text-primary">@item.Value orders</p>
                                    <p class="text-xs text-gray-500">@percentage.ToString("F1")%</p>
                                </div>
                            </div>
                            <div class="w-full bg-gray-100 rounded-full h-3 overflow-hidden shadow-inner">
                                <div class="bg-gradient-to-r @colorClass h-3 rounded-full transition-all duration-1000 ease-out shadow-lg"
                                     style="width: @percentage%"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-8 text-gray-400">
                    <i class="ph ph-chart-donut text-6xl mb-3"></i>
                    <p>No order data available</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusClasses(string status)
    {
        return status switch
        {
            "Pending" => "bg-yellow-100 text-yellow-700 border border-yellow-200",
            "Confirmed" => "bg-blue-100 text-blue-700 border border-blue-200",
            "Shipped" => "bg-purple-100 text-purple-700 border border-purple-200",
            "Delivered" => "bg-green-100 text-green-700 border border-green-200",
            "Cancelled" => "bg-red-100 text-red-700 border border-red-200",
            _ => "bg-gray-100 text-gray-700 border border-gray-200"
        };
    }

    string GetStatusIcon(string status)
    {
        return status switch
        {
            "Pending" => "clock",
            "Confirmed" => "check-circle",
            "Shipped" => "truck",
            "Delivered" => "package",
            "Cancelled" => "x-circle",
            _ => "circle"
        };
    }
}