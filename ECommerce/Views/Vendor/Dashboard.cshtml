@model ECommerce.ViewModels.VendorDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_VendorLayout";
}

<!-- Page Header -->
<div class="mb-8">
    <h1 class="font-playfair text-3xl font-bold text-primary mb-2">Dashboard</h1>
    <p class="text-gray-600">Welcome back! Here's what's happening with your store today.</p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-8">

    <!-- Total Products -->
    <div class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-100">
        <div class="flex items-center space-x-4">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-700 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <i class="ph-fill ph-package text-white text-3xl"></i>
            </div>
            <div class="flex-1">
                <h3 class="text-3xl font-bold text-primary mb-1">@Model.TotalProducts</h3>
                <p class="text-gray-600 text-sm font-medium">Total Products</p>
            </div>
        </div>
    </div>

    <!-- Total Stock -->
    <div class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-100">
        <div class="flex items-center space-x-4">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <i class="ph-fill ph-cube text-white text-3xl"></i>
            </div>
            <div class="flex-1">
                <h3 class="text-3xl font-bold text-primary mb-1">@Model.TotalStock</h3>
                <p class="text-gray-600 text-sm font-medium">Total Stock</p>
            </div>
        </div>
    </div>

    <!-- Inventory Value -->
    <div class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-100">
        <div class="flex items-center space-x-4">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <i class="ph-fill ph-currency-dollar text-white text-3xl"></i>
            </div>
            <div class="flex-1">
                <h3 class="text-3xl font-bold text-primary mb-1">$@Model.TotalInventoryValue.ToString("N2")</h3>
                <p class="text-gray-600 text-sm font-medium">Inventory Value</p>
            </div>
        </div>
    </div>
</div>

<!-- Secondary Stats -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">

    <!-- Low Stock -->
    <div class="bg-white rounded-2xl p-6 shadow-lg text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
        <div class="w-16 h-16 bg-red-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="ph-fill ph-warning-circle text-red-600 text-4xl"></i>
        </div>
        <h4 class="text-3xl font-bold text-primary mb-2">@Model.LowStockProducts</h4>
        <p class="text-gray-600 font-medium">Low Stock Products</p>
    </div>

    <!-- Out of Stock -->
    <div class="bg-white rounded-2xl p-6 shadow-lg text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
        <div class="w-16 h-16 bg-gray-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="ph-fill ph-x-circle text-gray-600 text-4xl"></i>
        </div>
        <h4 class="text-3xl font-bold text-primary mb-2">@Model.OutOfStockProducts</h4>
        <p class="text-gray-600 font-medium">Out of Stock</p>
    </div>

    <!-- Total Orders -->
    <div class="bg-white rounded-2xl p-6 shadow-lg text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
        <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="ph-fill ph-shopping-cart text-green-600 text-4xl"></i>
        </div>
        <h4 class="text-3xl font-bold text-primary mb-2">@Model.RecentOrders.Count()</h4>
        <p class="text-gray-600 font-medium">Recent Orders</p>
    </div>
</div>

<!-- Top Products -->
<div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden mb-8">
    <div class="px-6 py-5 border-b border-gray-100 flex justify-between items-center">
        <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-yellow-100 rounded-xl flex items-center justify-center">
                <i class="ph-fill ph-star text-yellow-500 text-xl"></i>
            </div>
            <h5 class="font-semibold text-lg text-primary">Top Products</h5>
        </div>
        <a asp-controller="Vendor"
           asp-action="Products"
            
           class="inline-flex items-center space-x-2 px-4 py-2 bg-gold/10 hover:bg-gold text-gold hover:text-white rounded-xl font-medium transition-all duration-300">
            <span class="text-sm">View All</span>
            <i class="ph ph-arrow-right"></i>
        </a>
    </div>

    <div class="overflow-x-auto">
        @if (Model.TopProducts != null && Model.TopProducts.Any())
        {
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Product</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Price</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Stock</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Metal</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Purity</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var product in Model.TopProducts)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 flex items-center space-x-3">
                                <img src="@product.ImageUrl" alt="@product.Name" class="w-12 h-12 rounded-lg object-cover border" />
                                <span class="font-medium text-primary">@product.Name</span>
                            </td>
                            <td class="px-6 py-4 font-bold text-green-600">$@product.Price.ToString("N2")</td>
                            <td class="px-6 py-4 text-gray-700">@product.Stock</td>
                            <td class="px-6 py-4 text-gray-700">@product.Metal</td>
                            <td class="px-6 py-4 text-gray-700">@product.Purity</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-10">
                <p class="text-gray-500">No top products yet.</p>
            </div>
        }
    </div>
</div>

<!-- Recent Orders -->
<div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">

    <div class="px-6 py-5 border-b border-gray-100 flex justify-between items-center">
        <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gold/10 rounded-xl flex items-center justify-center">
                <i class="ph-fill ph-shopping-bag text-gold text-xl"></i>
            </div>
            <h5 class="font-semibold text-lg text-primary">Recent Orders</h5>
        </div>
        <a asp-controller="Vendor"
           asp-action="Orders"
           
           class="inline-flex items-center space-x-2 px-4 py-2 bg-gold/10 hover:bg-gold text-gold hover:text-white rounded-xl font-medium transition-all duration-300">
            <span class="text-sm">View All</span>
            <i class="ph ph-arrow-right"></i>
        </a>
    </div>

    <div class="overflow-x-auto">
        @if (Model.RecentOrders != null && Model.RecentOrders.Any())
        {
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Order ID</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Customer</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Total</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var order in Model.RecentOrders)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 font-semibold text-primary">#@order.Id</td>
                            <td class="px-6 py-4 text-gray-700">User #@order.UserId</td>
                            <td class="px-6 py-4 text-gray-600 text-sm">@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4 font-bold text-green-600">$@order.Total.ToString("N2")</td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold @GetStatusClasses(order.Status)">
                                    @order.Status
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-10">
                <p class="text-gray-500">No recent orders yet.</p>
            </div>
        }
    </div>
</div>

@functions {
    string GetStatusClasses(string status)
    {
        return status switch
        {
            "Pending" => "bg-yellow-100 text-yellow-700",
            "Confirmed" => "bg-blue-100 text-blue-700",
            "Shipped" => "bg-purple-100 text-purple-700",
            "Delivered" => "bg-green-100 text-green-700",
            "Cancelled" => "bg-red-100 text-red-700",
            _ => "bg-gray-100 text-gray-700"
        };
    }
}
