@model IEnumerable<ECommerce.Models.Entities.Review>
@{
    ViewData["Title"] = "Product Reviews";
    Layout = "_VendorLayout";
    var currentSearch = ViewBag.Search as string ?? "";
    var products = ViewBag.Products as IEnumerable<ECommerce.Models.Entities.Product>;
    int? selectedProductId = ViewBag.SelectedProductId as int?;
}

<!-- Page Header -->
<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
    <div>
        <div class="flex items-center space-x-3 mb-2">
            <div class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center">
                <i class="ph-fill ph-star text-purple-600 text-xl"></i>
            </div>
            <h1 class="font-playfair text-3xl font-bold text-primary">Product Reviews</h1>
        </div>
        <p class="text-gray-600">View and manage customer feedback on your products</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="flex items-center space-x-4 bg-white px-6 py-3 rounded-xl shadow-md border border-gray-100">
            <div class="text-center">
                <div class="text-2xl font-bold text-purple-600">@ViewBag.TotalItems</div>
                <div class="text-xs text-gray-500">Total Reviews</div>
            </div>

            <div class="w-px h-10 bg-gray-200"></div>

            <div class="text-center">
                <div class="text-2xl font-bold text-yellow-500">@ViewBag.AverageRating.ToString("F1")</div>
                <div class="text-xs text-gray-500">Avg Rating</div>
            </div>
        </div>
    }
</div>

<!-- Filters & Pagination Info -->
<div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden mb-8">
    <div class="p-6 border-b border-gray-100">
        <form method="get" asp-action="Reviews" class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <input type="hidden" name="page" value="1">
            <input type="hidden" name="pageSize" value="@ViewBag.PageSize">

            <!-- Search -->
            <div class="md:col-span-2">
                <div class="relative">
                    <input type="text"
                           name="search"
                           value="@currentSearch"
                           placeholder="Search reviews..."
                           class="w-full rounded-xl border-2 border-gray-200 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none px-4 py-2.5 pr-10 transition-all">
                    <i class="ph ph-magnifying-glass absolute right-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                </div>
            </div>

            <!-- Product Filter -->
            <div class="md:col-span-2">
                <select name="productId"
                        class="w-full rounded-xl border-2 border-gray-200 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none px-4 py-2.5 transition-all">
                    <option value="">All Products</option>
                    @foreach (var product in products)
                    {
                        <option value="@product.Id">@product.Name</option>
                    }
                </select>
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit"
                        class="w-full bg-purple-100 hover:bg-purple-600 hover:text-white text-purple-700 border-2 border-purple-500 px-6 py-2.5 rounded-xl font-semibold transition-all duration-300 flex items-center justify-center space-x-2">
                    <i class="ph ph-funnel-simple"></i>
                    <span>Filter</span>
                </button>
            </div>
        </form>
    </div>

    <!-- Results Info & Page Size Selector -->
    <div class="px-6 py-4 bg-gray-50 flex flex-col sm:flex-row justify-between items-center gap-4">
        <div class="flex items-center space-x-2">
            <i class="ph ph-star text-purple-600"></i>
            <span class="text-sm text-gray-600">
                Showing <span class="font-semibold text-primary">@((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1)</span>
                to <span class="font-semibold text-primary">@Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, Model.Count())</span>
                of <span class="font-semibold text-primary">@ViewBag.TotalItems</span> reviews
            </span>
        </div>

        <form method="get" action="/vendor/reviews" class="flex items-center space-x-2">
            <input type="hidden" name="search" value="@currentSearch">
            <input type="hidden" name="page" value="1">

            <label class="text-sm text-gray-600 font-medium">Items per page:</label>
            <select name="pageSize"
                    onchange="this.form.submit()"
                    class="rounded-xl border-2 border-gray-200 focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none px-3 py-1.5 text-sm font-medium transition-all">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
            </select>
        </form>
    </div>
</div>

<!-- Reviews List -->
@if (Model != null && Model.Any())
{
    <div class="space-y-6">
        @foreach (var review in Model)
        {
            <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100">

                <!-- Review Header -->
                <div class="bg-gradient-to-br from-purple-500 to-purple-700 px-6 py-4">
                    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
                        <div class="flex items-center space-x-3">
                            <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
                                <i class="ph-fill ph-user text-white text-2xl"></i>
                            </div>
                            <div>
                                <h5 class="font-bold text-white">@review.User.Name</h5>
                                <p class="text-purple-100 text-sm">@review.User.Email</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= review.Rating)
                                {
                                    <i class="ph-fill ph-star text-yellow-300 text-lg"></i>
                                }
                                else
                                {
                                    <i class="ph ph-star text-white/30 text-lg"></i>
                                }
                            }
                            <span class="text-white font-bold ml-2">@review.Rating.0</span>
                        </div>
                    </div>
                </div>

                <!-- Review Body -->
                <div class="p-6">
                    <!-- Product Info -->
                    <div class="flex items-center space-x-3 mb-4 pb-4 border-b border-gray-100">
                        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                            <i class="ph-fill ph-package text-purple-600"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Product</p>
                            <p class="font-semibold text-primary">@(review.Product?.Name ?? "Unknown Product")</p>
                        </div>
                    </div>

                    <!-- Review Comment -->
                    <div class="mb-4">
                        <p class="text-gray-700 leading-relaxed">
                            @if (!string.IsNullOrEmpty(review.Comment))
                            {
                                @review.Comment
                            }
                            else
                            {
                                <span class="italic text-gray-400">No comment provided</span>
                            }
                        </p>
                    </div>

                    <!-- Review Date -->
                    <div class="flex items-center space-x-2 text-sm text-gray-500">
                        <i class="ph ph-clock"></i>
                        <span>@review.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</span>
                    </div>
                </div>

                <!-- Review Footer -->
                <div class="px-6 pb-6 pt-4 border-t border-gray-100">
                    <div class="flex flex-wrap gap-2">
                        @if (review.Rating >= 4)
                        {
                            <span class="inline-flex items-center space-x-1 bg-green-100 text-green-700 px-3 py-1 rounded-lg text-sm font-medium">
                                <i class="ph-fill ph-smiley text-lg"></i>
                                <span>Positive</span>
                            </span>
                        }
                        else if (review.Rating == 3)
                        {
                            <span class="inline-flex items-center space-x-1 bg-yellow-100 text-yellow-700 px-3 py-1 rounded-lg text-sm font-medium">
                                <i class="ph-fill ph-smiley-meh text-lg"></i>
                                <span>Neutral</span>
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center space-x-1 bg-red-100 text-red-700 px-3 py-1 rounded-lg text-sm font-medium">
                                <i class="ph-fill ph-smiley-sad text-lg"></i>
                                <span>Needs Attention</span>
                            </span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Empty State -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-20 text-center">
        <div class="max-w-md mx-auto">
            <div class="w-24 h-24 bg-purple-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
                <i class="ph ph-star text-purple-300 text-6xl"></i>
            </div>
            <h3 class="font-playfair text-2xl font-bold text-primary mb-2">No Reviews Yet</h3>
            <p class="text-gray-600 mb-8">Your products haven't received any reviews yet. Customer feedback will appear here once they start reviewing your products.</p>
            <div class="flex flex-col sm:flex-row gap-3 justify-center">
                <a asp-controller="Vendor"
                   asp-action="MyProducts"
                    
                   class="inline-flex items-center justify-center space-x-2 bg-gradient-to-r from-purple-500 to-purple-700 hover:from-purple-600 hover:to-purple-800 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 shadow-lg hover:shadow-xl">
                    <i class="ph ph-package text-xl"></i>
                    <span>View Products</span>
                </a>
            </div>
        </div>
    </div>
}

@if (ViewBag.TotalItems > ViewBag.PageSize)
{
    <div class="flex justify-center mt-10">
        <div class="flex space-x-2">
            @{
                int totalPages = (int)Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize);
                int currentPage = ViewBag.CurrentPage;
                string search = ViewBag.Search;
                int? pid = ViewBag.SelectedProductId;
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <a href="@Url.Action("Reviews", new { page = i, pageSize = ViewBag.PageSize, search = search, productId = pid })"
                   class="px-4 py-2 rounded-xl border text-sm font-medium @(i == currentPage ? "bg-purple-600 text-white border-purple-600" : "border-gray-300 text-gray-600 hover:bg-purple-100")">
                    @i
                </a>
            }
        </div>
    </div>
}


@section Styles {
    <style>
        .group:hover .group-hover\:scale-110 {
            transform: scale(1.1);
        }
    </style>
}