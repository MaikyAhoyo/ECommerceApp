@model ECommerce.ViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "Add Product";
    Layout = "_VendorLayout";
}

<div class="max-w-4xl mx-auto animate-fade-in">
    <div class="flex items-center justify-between mb-10">
        <div class="flex items-center space-x-3">
            <a asp-controller="Vendor"
               asp-action="MyProducts"
               
               class="w-10 h-10 bg-gray-100 hover:bg-yellow-100 text-gray-600 hover:text-yellow-500 rounded-xl flex items-center justify-center transition-all duration-300">
                <i class="ph ph-arrow-left text-2xl"></i>
            </a>
            <div>
                <h1 class="font-playfair text-3xl font-bold text-primary tracking-tight">
                    Add Product
                </h1>
                <p class="text-gray-500 text-sm">Add a new jewelry piece to your catalog</p>
            </div>
        </div>
        <div class="hidden sm:block">
            <div class="w-12 h-12 bg-gradient-to-r from-yellow-500 to-yellow-700 rounded-xl flex items-center justify-center text-white shadow-lg">
                <i class="ph-fill ph-diamond text-2xl"></i>
            </div>
        </div>
    </div>

    <form method="post" asp-action="CreateProduct" class="space-y-8">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 rounded-xl p-4 text-red-800 text-sm"></div>

        <div class="bg-white rounded-2xl border border-gray-100 shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl">
            <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 px-6 py-4">
                <h3 class="text-lg font-semibold text-white flex items-center space-x-2">
                    <i class="ph-fill ph-info text-xl"></i>
                    <span>Product Information</span>
                </h3>
            </div>

            <div class="p-8 space-y-8">
                <div class="group">
                    <label asp-for="Name" class="block text-sm font-semibold text-primary mb-2 tracking-wide">Product Name</label>
                    <div class="relative">
                        <i class="ph ph-pencil-simple text-gray-400 absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none"></i>
                        <input asp-for="Name"
                               class="w-full pl-11 pr-4 py-3 rounded-xl border-2 border-gray-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-500/20 outline-none text-gray-800 placeholder-gray-400 transition-all duration-300"
                               placeholder="e.g., Diamond Gold Ring" required />
                    </div>
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <div class="group">
                    <label asp-for="Description" class="block text-sm font-semibold text-primary mb-2 tracking-wide">Description</label>
                    <textarea asp-for="Description"
                              rows="4"
                              class="w-full rounded-xl border-2 border-gray-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-500/20 outline-none px-4 py-3 transition-all resize-none"
                              placeholder="Describe your product..." required></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div class="group">
                        <label asp-for="Price" class="block text-sm font-semibold text-primary mb-2 tracking-wide">Price ($)</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">$</span>
                            <input asp-for="Price"
                                   type="number"
                                   step="0.01"
                                   class="w-full pl-8 pr-4 py-3 rounded-xl border-2 border-gray-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-500/20 outline-none transition-all duration-300"
                                   placeholder="0.00" required />
                        </div>
                        <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="group">
                        <label asp-for="Stock" class="block text-sm font-semibold text-primary mb-2 tracking-wide">Stock</label>
                        <input asp-for="Stock"
                               class="w-full rounded-xl border-2 border-gray-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-500/20 outline-none px-4 py-3 transition-all"
                               placeholder="0" required />
                        <span asp-validation-for="Stock" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div class="group">
                    <label asp-for="ImageUrl" class="block text-sm font-semibold text-primary mb-2 tracking-wide">Image URL</label>
                    <div class="relative">
                        <i class="ph ph-image text-gray-400 absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none"></i>
                        <input asp-for="ImageUrl"
                               class="w-full pl-11 pr-4 py-3 rounded-xl border-2 border-gray-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-500/20 outline-none transition-all duration-300"
                               placeholder="https://example.com/image.jpg" />
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-red-500 text-sm"></span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl border border-gray-100 shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl">
            <div class="bg-gradient-to-r from-gray-700 to-gray-900 px-6 py-4">
                <h3 class="text-lg font-semibold text-white flex items-center space-x-2">
                    <i class="ph-fill ph-sparkle text-xl"></i>
                    <span>Metal Specifications</span>
                </h3>
            </div>

            <div class="p-8 space-y-6">
                <div class="group">
                    <label asp-for="Metal" class="block text-sm font-semibold text-primary mb-2 tracking-wide">Metal Type</label>
                    <select asp-for="Metal"
                            class="w-full rounded-xl border-2 border-gray-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-500/20 outline-none px-4 py-3 transition-all">
                        <option value="">Select Metal Type</option>
                        <option value="Gold">Gold</option>
                        <option value="Silver">Silver</option>
                        <option value="Platinum">Platinum</option>
                    </select>
                    <span asp-validation-for="Metal" class="text-red-500 text-sm"></span>
                </div>

                <div class="group">
                    <label asp-for="Purity" class="block text-sm font-semibold text-primary mb-2 tracking-wide">Purity</label>
                    <input asp-for="Purity"
                           type="number"
                           step="0.001"
                           class="w-full rounded-xl border-2 border-gray-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-500/20 outline-none px-4 py-3 transition-all"
                           placeholder="14, 18, 24, 925, 950" />
                    <p class="text-xs text-gray-500 mt-1">Gold (14k, 18k, 24k), Silver (925), Platinum (950)</p>
                    <span asp-validation-for="Purity" class="text-red-500 text-sm"></span>
                </div>
            </div>
        </div>

        @if (Model.AvailableCategories != null && Model.AvailableCategories.Any())
        {
            <div class="bg-white rounded-2xl border border-gray-100 shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl">
                <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 px-6 py-4">
                    <h3 class="text-lg font-semibold text-white flex items-center space-x-2">
                        <i class="ph-fill ph-tag text-xl"></i>
                        <span>Categories</span>
                    </h3>
                </div>

                <div class="p-8 grid md:grid-cols-2 gap-4">
                    @foreach (var category in Model.AvailableCategories)
                    {
                        <label class="flex items-center space-x-3 p-4 rounded-xl border-2 border-gray-200 hover:border-yellow-500 cursor-pointer transition-all">
                            <input id="SelectedCategoryIds"
                                   name="SelectedCategoryIds" 
                                   type="checkbox"
                                   value="@category.Id"
                                   class="w-5 h-5 text-yellow-500 rounded focus:ring-yellow-500 focus:ring-2">
                            <span class="text-gray-700 font-medium">@category.Name</span>
                        </label>
                    }
                </div>
            </div>
        }

        <div class="flex flex-col sm:flex-row gap-4 pt-4">
            <button type="submit"
                    class="flex-1 bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-700 hover:to-yellow-900 text-white px-8 py-4 rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5 flex items-center justify-center space-x-2">
                <i class="ph ph-check-circle text-xl"></i>
                <span>Add Product</span>
            </button>

            <a asp-controller="Vendor"
               asp-action="MyProducts"
               
               class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 px-8 py-4 rounded-xl font-semibold transition-all duration-300 flex items-center justify-center space-x-2">
                <i class="ph ph-x-circle text-xl"></i>
                <span>Cancel</span>
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    @@keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.5s ease-out;
    }
</style>
